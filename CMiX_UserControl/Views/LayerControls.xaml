<UserControl
    x:Class="CMiX.Views.LayerControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="948.222"
    d:DesignWidth="1663.739"
    mc:Ignorable="d">

    <Border>
        <TabControl>
            <TabItem Width="100" Height="30" Header="Content">
                <Views:Content                 
                    Grid.Column="0" 
                    Margin="4, 0, 4, 0"
                    DataContext="{Binding Content}"/>
            </TabItem>
            <TabItem Header="Mask">
                <Views:Mask                 
                    Grid.Column="1"
                    Margin="4, 0, 4, 0" 
                    DataContext="{Binding Mask}"/>
            </TabItem>
            <TabItem Header="PostFX">
                <Views:PostFX 
                    Margin="0, 16, 0, 0" 
                    DataContext="{Binding PostFX}" />
            </TabItem>
        </TabControl>
    </Border>
</UserControl>