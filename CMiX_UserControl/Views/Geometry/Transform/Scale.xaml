<UserControl x:Class="CMiX.Studio.Views.Scale"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:MVVM.Views="clr-namespace:CMiX.MVVM.Views;assembly=CMiX.MVVM"
             mc:Ignorable="d" 
             d:DesignHeight="150.801" d:DesignWidth="415.252">

    <StackPanel>
        <MVVM.Views:Slider
                Height="20"
                Grid.Column="0"
                Margin="1"
                Caption="Scale X"
                DataContext="{Binding ScaleX}"/>
        <MVVM.Views:Slider
                Height="20"
                Grid.Column="0"
                Margin="1"
                Caption="Y"
                DataContext="{Binding ScaleY}"/>
        <MVVM.Views:Slider
                Height="20"
                Grid.Column="0"
                Margin="1"
                Caption="Z"
                DataContext="{Binding ScaleZ}"/>
    </StackPanel>
</UserControl>
