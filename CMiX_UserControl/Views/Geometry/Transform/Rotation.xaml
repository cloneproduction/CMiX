<UserControl x:Class="CMiX.Views.Rotation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:MVVM.Views="clr-namespace:CMiX.MVVM.Views;assembly=CMiX_MVVM"
             mc:Ignorable="d" 
             d:DesignHeight="145.023" d:DesignWidth="357.03">

    <StackPanel>
        <MVVM.Views:Slider
                Height="20"
                Grid.Column="0"
                Margin="1"
                Caption="Rotation X"
                DataContext="{Binding RotationX}"/>
        <MVVM.Views:Slider
                Height="20"
                Grid.Column="0"
                Margin="1"
                Caption="Y"
                DataContext="{Binding RotationY}"/>
        <MVVM.Views:Slider
                Height="20"
                Grid.Column="0"
                Margin="1"
                Caption="Z"
                DataContext="{Binding RotationZ}"/>
    </StackPanel>
</UserControl>
