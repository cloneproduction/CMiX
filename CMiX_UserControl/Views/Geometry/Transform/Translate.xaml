<UserControl x:Class="CMiX.Views.Translate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:MVVM.Views="clr-namespace:CMiX.MVVM.Views;assembly=CMiX_MVVM"
             mc:Ignorable="d" 
             d:DesignHeight="150.801" d:DesignWidth="415.252">

    <StackPanel>
        <Border Height="25">
            <TextBlock
                VerticalAlignment="Center"
                Margin="4, 0, 0, 0"
                Text="Translate"
                Foreground="{StaticResource TextBase}"/>
        </Border>
        <MVVM.Views:SliderCentered
                Height="20"
                Grid.Column="0"
                Margin="1"
                Caption="X"
                DataContext="{Binding TranslateX}"/>
        <MVVM.Views:SliderCentered
                Height="20"
                Grid.Column="0"
                Margin="1"
                Caption="Y"
                DataContext="{Binding TranslateY}"/>
        <MVVM.Views:SliderCentered
                Height="20"
                Grid.Column="0"
                Margin="1"
                Caption="Z"
                DataContext="{Binding TranslateZ}"/>
    </StackPanel>
</UserControl>
