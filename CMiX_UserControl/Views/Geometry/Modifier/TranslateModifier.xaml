<UserControl
    x:Class="CMiX.Views.TranslateModifier"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:ViewModels="clr-namespace:CMiX.MVVM.ViewModels;assembly=CMiX_MVVM"
    xmlns:MVVM.Views="clr-namespace:CMiX.MVVM.Views;assembly=CMiX_MVVM"
    xmlns:Resources="clr-namespace:CMiX.MVVM.Resources;assembly=CMiX_MVVM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="636.667"
    d:DesignWidth="316.667"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <Resources:BindingProxy x:Key="proxy" Data="{Binding}" />
            <ObjectDataProvider x:Key="GeometryTranslateMode" MethodName="GetNames" ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="ViewModels:GeometryTranslateMode"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </ResourceDictionary>
    </UserControl.Resources>

    <Expander Header="Translate" Style="{StaticResource InnerExpander}">
        <Border Padding="8">
            <StackPanel>
                <Grid Height="20" Margin="0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Text="Pattern" 
                        Padding="4, 0" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Right" 
                        Foreground="{StaticResource TextBase}"/>
                    <ComboBox
                        Grid.Column="2"
                        ItemsSource="{Binding Source={StaticResource GeometryTranslateMode}}"
                        SelectedItem="{Binding TranslateMode.Mode}"
                        SelectedIndex="0"/>
                </Grid>
                <Views:BeatModifier 
                    Margin="0, 8"
                    DataContext="{Binding TranslateBeatModifier}"/>
                <MVVM.Views:Slider
                    Margin="0, 1"
                    Caption="X"
                    DataContext="{Binding X}"/>
                <MVVM.Views:Slider
                    Margin="0, 1"
                    Caption="Y"
                    DataContext="{Binding Y}"/>
                <MVVM.Views:Slider
                    Margin="0, 1"
                    Caption="Z"
                    DataContext="{Binding Z}"/>
            </StackPanel>
        </Border>
    </Expander>
</UserControl>