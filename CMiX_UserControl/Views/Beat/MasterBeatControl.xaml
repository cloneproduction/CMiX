<UserControl
    x:Class="CMiX.MasterBeatControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="289.777"
    d:DesignWidth="252.667"
    mc:Ignorable="d">


    <Border 
        Padding="8"
        Background="{StaticResource HighDarkerColor}">
        <StackPanel>
                <DockPanel Height="30">
                    <Button
                        Grid.Column="3"
                        Style="{StaticResource ButtonRounded}"
                        Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                        Command="{Binding Path=ResyncCommand}"
                        Content="Rc"
                        DockPanel.Dock="Right"/>
                    <Button
                        Grid.Column="2"
                        Style="{StaticResource ButtonRounded}"
                        Margin="4, 0"
                        Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                        Command="{Binding Path=MultiplyCommand}"
                        Content="+"
                        DockPanel.Dock="Right"/>
                    <Button
                        Grid.Column="1"
                        Style="{StaticResource ButtonRounded}"
                        Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                        Command="{Binding Path=DivideCommand}"
                        Content="-"
                        DockPanel.Dock="Right"/>
                    <Border 
                        Background="{StaticResource HighDarkerColor}" 
                        Margin="0, 0, 4, 0" DockPanel.Dock="Right" >
                        <TextBox 
                            Foreground="{StaticResource TextBase}" 
                            Background="{StaticResource SuperHighDarkerColor}"
                            BorderThickness="0"
                            BorderBrush="{StaticResource SuperHighDarkerColor}"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Text="{Binding Path=BPM, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat=F0}" />
                    </Border>
                </DockPanel>

                <Button
                    Height="30"
                    Margin="0, 4, 0, 0"
                    Style="{StaticResource ButtonRounded}"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Command="{Binding Path=TapCommand}"
                    Content="TAP"/>
                <Border Margin="0, 4" Height="25">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="Background" Value="Red"/>
                        <!--<Setter Property="Visibility" Value="Hidden" />-->
                        <!--<Style.Resources>
                            <Storyboard x:Key="flashAnimation" >
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" AutoReverse="True" Duration="0:0:0.1" RepeatBehavior="Forever" />
                            </Storyboard>
                        </Style.Resources>-->

                        
                        <Style.Triggers>
                            
                            <DataTrigger Binding="{Binding BeatTaped}" Value="True">
                                <Setter Property="Visibility" Value="Hidden" />
                                <!--<DataTrigger.EnterActions>
                                    <BeginStoryboard Name="flash" Storyboard="{StaticResource flashAnimation}" />
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="flash"/>
                                </DataTrigger.ExitActions>-->
                            </DataTrigger>
                            <DataTrigger Binding="{Binding BeatTaped}" Value="false">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </StackPanel>

        </Border>


</UserControl>