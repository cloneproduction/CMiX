<UserControl
    x:Class="CMiX.MasterBeatControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="289.777"
    d:DesignWidth="252.667"
    mc:Ignorable="d">


    <Border 
        Padding="8"
        Background="{StaticResource HighDarkerColor}">
        <StackPanel>
                <DockPanel Height="30">
                    <Button
                        Grid.Column="3"
                        Style="{StaticResource ButtonRounded}"
                        Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                        Command="{Binding Path=ResyncCommand}"
                        Content="Rc"
                        DockPanel.Dock="Right"/>
                    <Button
                        Grid.Column="2"
                        Style="{StaticResource ButtonRounded}"
                        Margin="4, 0"
                        Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                        Command="{Binding Path=MultiplyCommand}"
                        Content="+"
                        DockPanel.Dock="Right"/>
                    <Button
                        Grid.Column="1"
                        Style="{StaticResource ButtonRounded}"
                        Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                        Command="{Binding Path=DivideCommand}"
                        Content="-"
                        DockPanel.Dock="Right"/>
                <Grid DockPanel.Dock="Right" Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <Border Margin="0, 4" Height="25" Grid.Column="0" Grid.Row="0">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Background" Value="Red"/>
                                <Setter Property="Visibility" Value="Hidden"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BeatTick}" Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                   
                    
                    <Border Margin="0, 4" Height="25" Grid.Column="1" Grid.Row="0">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Background" Value="Red"/>
                                <Setter Property="Visibility" Value="Hidden"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BeatTick}" Value="1">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <Border Margin="0, 4" Height="25" Grid.Column="1" Grid.Row="1">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Background" Value="Red"/>
                                <Setter Property="Visibility" Value="Hidden"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BeatTick}" Value="2">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                    
                    <Border Margin="0, 4" Height="25" Grid.Column="0" Grid.Row="1">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Background" Value="Red"/>
                                <Setter Property="Visibility" Value="Hidden"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BeatTick}" Value="3">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                    

                </Grid>
                <Border 
                        Background="{StaticResource HighDarkerColor}" 
                        Margin="0, 0, 4, 0" DockPanel.Dock="Right" >
                        <TextBox 
                            Foreground="{StaticResource TextBase}" 
                            Background="{StaticResource SuperHighDarkerColor}"
                            BorderThickness="0"
                            BorderBrush="{StaticResource SuperHighDarkerColor}"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Text="{Binding Path=BPM, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat=F0}" />
                    </Border>
                </DockPanel>

                <Button
                    Height="30"
                    Margin="0, 4, 0, 0"
                    Style="{StaticResource ButtonRounded}"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Command="{Binding Path=TapCommand}"
                    Content="TAP"/>

                
        </StackPanel>

        </Border>


</UserControl>