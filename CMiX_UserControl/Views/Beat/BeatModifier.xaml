<UserControl
    x:Class="CMiX.Studio.Views.BeatModifier"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:CMiX.Studio.ViewModels"
    xmlns:Views="clr-namespace:CMiX.Studio.Views"
    xmlns:MVVM.Views="clr-namespace:CMiX.MVVM.Views;assembly=CMiX.MVVM"
    d:DataContext="{d:DesignInstance Type={x:Type viewModels:BeatModifier}, IsDesignTimeCreatable=False}"
    d:DesignHeight="58.826"
    d:DesignWidth="324.414"
    mc:Ignorable="d">

    <StackPanel>
        <Views:BeatControls 
            Height="20"
            Margin="0, 1" 
            DockPanel.Dock="Right" />
        <MVVM.Views:Slider
            Caption="ToHit" 
            Margin="0, 1" 
            DataContext="{Binding ChanceToHit}" />
    </StackPanel>
</UserControl>
