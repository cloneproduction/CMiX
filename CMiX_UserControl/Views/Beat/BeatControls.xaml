<UserControl
    x:Class="CMiX.Views.BeatControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModels="clr-namespace:CMiX.ViewModels"
    d:DataContext="{d:DesignInstance Type={x:Type ViewModels:BeatModifier}, IsDesignTimeCreatable=False}"
    d:DesignHeight="46.5"
    d:DesignWidth="226.667"
    mc:Ignorable="d">
    <DockPanel  Height="20" >
        <Border Width="60">
            <TextBlock 
            Padding="4, 0"
            TextTrimming="CharacterEllipsis" 
            Text="Multi"  
            FontSize="10" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Center" 
            Foreground="{StaticResource TextBase}"/>
        </Border>
        <Button
                DockPanel.Dock="Right"
                Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                Command="{Binding Path=ResetCommand}"
                Style="{StaticResource ButtonImage}">
            <Button.Content>
                <Image Margin="15" Source="{StaticResource Reset}"/>
            </Button.Content>
        </Button>
        <Button
            Margin="0, 0, 1, 0"
            DockPanel.Dock="Left"
            Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
            Command="{Binding Path=DivideCommand}"
            Content="-"
            IsDefault="True"
            />
        <Button
            Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
            Margin="1, 0"
            Command="{Binding Path=MultiplyCommand}"
            Content="+"
            DockPanel.Dock="Right"
            IsDefault="True"
            />
        <Border
            HorizontalAlignment="Stretch"
            Background="{StaticResource DarkColor}">
            <TextBlock 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Foreground="{StaticResource TextBase}" 
                Text="{Binding BPM, Mode=OneWay, StringFormat=F0}" />
        </Border>
    </DockPanel>
</UserControl>