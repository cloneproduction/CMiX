<UserControl x:Class="CMiX.Studio.Views.TexturePathSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModels="clr-namespace:CMiX.MVVM.ViewModels"
             xmlns:Views="clr-namespace:CMiX.Studio.Views"
             xmlns:Resources="clr-namespace:CMiX.MVVM.Resources;assembly=CMiX.MVVM"
             xmlns:dd="urn:gong-wpf-dragdrop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ComboBox 
        Margin="0, 2"
        Height="25" 
        ItemsSource="{Binding ImageCollectionView}"
        AllowDrop="True"
        SelectedValuePath="Path" 
        SelectedValue="{Binding Path=DataContext.AssetPathSelector.SelectedPath, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Views:Texture}}}" 
        dd:DragDrop.DropHandler="{Binding Path=DataContext.AssetPathSelector, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Views:Texture}}}"
        dd:DragDrop.IsDropTarget="True">

        <ComboBox.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Name, Mode=TwoWay}"/>
            </DataTemplate>
        </ComboBox.ItemTemplate>

        <ComboBox.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel RequestBringIntoView="OnRequestBringIntoView"/>
            </ItemsPanelTemplate>
        </ComboBox.ItemsPanel>

    </ComboBox>
</UserControl>