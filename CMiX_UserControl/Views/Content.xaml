<UserControl
    x:Class="CMiX.Views.Content"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="425.667"
    d:DesignWidth="280"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <Border DockPanel.Dock="Top"               
                BorderThickness="0, 0, 0, 2"
                BorderBrush="{StaticResource DarkColor}"
                >
            <DockPanel>
                <Button 
                    DockPanel.Dock="Right"
                    Command="{Binding Path=ResetSelfCommand}"
                    Height="15" 
                    Width="15" 
                    Style="{StaticResource ButtonBase}"
                    Content="R"
                    />
                <Button 
                    DockPanel.Dock="Right"
                    Margin="2, 0"
                    Command="{Binding Path=CopySelfCommand}"
                    Height="15" 
                    Width="15" 
                    Style="{StaticResource ButtonBase}"
                    Content="C"
                    />
                <Button 
                    DockPanel.Dock="Right"
                    Command="{Binding Path=PasteSelfCommand}"
                    Height="15" 
                    Width="15" 
                    Style="{StaticResource ButtonBase}"
                    Content="P"
                    />
                <Label
                    Style="{StaticResource LabelBase}"
                    HorizontalAlignment="Left"
                    Content="CONTENT"
                    DockPanel.Dock="Bottom"
                    FontWeight="SemiBold"
                    FontSize="12"/>
            </DockPanel>
        </Border>
        <Border Margin="0,8" DockPanel.Dock="Top" Style="{StaticResource BorderContainer}">
            <Views:BeatModifier Height="20" DataContext="{Binding BeatModifier}"/>
        </Border>
        <TabControl DockPanel.Dock="Bottom" AllowDrop="True" Style="{StaticResource TabControlBase}">
            <TabItem Header="GEOMETRY" 
                     DragOver="TabItem_DragOver"
                     Style="{StaticResource TabItemBase}">
                <Views:Geometry
                    DataContext="{Binding Geometry}"
                    DockPanel.Dock="Bottom" />
            </TabItem>
            <TabItem Header="TEXTURE" 
                     DragOver="TabItem_DragOver"
                     Style="{StaticResource TabItemBase}">
                <Views:Texture
                DataContext="{Binding Texture}"
                DockPanel.Dock="Bottom" />
            </TabItem>
            <TabItem Header="POSTFX" 
                     DragOver="TabItem_DragOver"
                     Style="{StaticResource TabItemBase}">
                <Views:PostFX
                DataContext="{Binding PostFX}"
                DockPanel.Dock="Bottom" />
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>