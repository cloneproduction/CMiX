<UserControl
    x:Class="CMiX.Views.Content"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="834.667"
    d:DesignWidth="322"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <Border DockPanel.Dock="Top"               
                BorderThickness="0, 0, 0, 2"
                BorderBrush="{StaticResource DarkColor}">
            <Label
                Height="25"
                HorizontalAlignment="Stretch"
                Style="{StaticResource LabelBase}"
                Content="CONTENT"
                Foreground="{StaticResource TextBase}" />
        </Border>
        <Border Margin="0,4" DockPanel.Dock="Top" Padding="4" Background="{StaticResource DarkerColor}" CornerRadius="2">
            <Views:BeatModifier Height="25" DataContext="{Binding BeatModifier}"/>
        </Border>
        <Views:PostFX
                DataContext="{Binding PostFX}"
                DockPanel.Dock="Bottom" />
        <Views:Geometry
                DataContext="{Binding Geometry}"
                DockPanel.Dock="Bottom" />
        <Views:Texture
                Margin="0,4"
                DataContext="{Binding Texture}"
                DockPanel.Dock="Top" />
    </DockPanel>
</UserControl>