<UserControl
    x:Class="CMiX.Views.Content"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="583.667"
    d:DesignWidth="278"
    mc:Ignorable="d">
    
    <DockPanel LastChildFill="True">
        <Border 
            Padding="4, 0"
            DockPanel.Dock="Top">
            <DockPanel>
                <Button 
                    ToolTip="Reset"
                    DockPanel.Dock="Right"
                    Command="{Binding Path=ResetSelfCommand}"
                    Height="15" 
                    Width="15" 
                    Style="{StaticResource ButtonImage}"
                    >
                    <Button.Content>
                        <Image Source="{StaticResource Reset}"/>
                    </Button.Content>
                </Button>
                <Button 
                    DockPanel.Dock="Right"
                    ToolTip="Paste"
                    Margin="2, 0"
                    Command="{Binding Path=PasteSelfCommand}"
                    Height="15" 
                    Width="15" 
                    Style="{StaticResource ButtonImage}"
                    >
                    <Button.Content>
                        <Image Source="{StaticResource Paste}"/>
                    </Button.Content>
                </Button>
                <Button 
                    ToolTip="Copy"
                    DockPanel.Dock="Right"
                    Command="{Binding Path=CopySelfCommand}"
                    Height="15" 
                    Width="15" 
                    Style="{StaticResource ButtonImage}"
                    >
                    <Button.Content>
                        <Image Source="{StaticResource Copy}"/>
                    </Button.Content>
                </Button>
                <Label
                    HorizontalAlignment="Left"
                    Content="CONTENT"
                    DockPanel.Dock="Bottom"
                    FontWeight="SemiBold"
                    FontSize="12"
                    />
            </DockPanel>
        </Border>
        <Border>
            <DockPanel>
                <Border 
                    Margin="0, 4, 0, 8" 
                    DockPanel.Dock="Top" 
                    Style="{StaticResource BorderContainer}">
                    <Views:BeatModifier 
                        Height="20" 
                        DataContext="{Binding BeatModifier}"
                        />
                </Border>
                <TabControl 
                    DockPanel.Dock="Bottom" 
                    AllowDrop="True" >
                    <TabItem Width="25"
                         Height="25"
                         HorizontalAlignment="Left"
                         DragOver="TabItem_DragOver">
                        <TabItem.Header>
                            <Image Source="{StaticResource Geometry}"  ToolTip="Geometry" Height="15" Width="auto" Opacity="0.75"/>
                        </TabItem.Header>
                        <Views:Geometry
                            DataContext="{Binding Geometry}"
                            DockPanel.Dock="Bottom" 
                            />
                    </TabItem>
                    <TabItem  
                        HorizontalAlignment="Left"
                        DragOver="TabItem_DragOver">
                        <TabItem.Header>
                            <Image Source="{StaticResource Texture}" ToolTip="Texture" Height="15" Width="auto" Opacity="0.75"/>
                        </TabItem.Header>
                        <Views:Texture
                            DataContext="{Binding Texture}"
                            DockPanel.Dock="Bottom" 
                            />
                    </TabItem>
                    <TabItem 
                        HorizontalAlignment="Left"
                        DragOver="TabItem_DragOver">
                        <TabItem.Header>
                            <Image Source="{StaticResource PostFX}" ToolTip="PostFX" Height="15" Width="auto" Opacity="0.75"/>
                        </TabItem.Header>
                        <Views:PostFX
                            DataContext="{Binding PostFX}"
                            DockPanel.Dock="Bottom" 
                            />
                    </TabItem>
                </TabControl>
            </DockPanel>
        </Border>
    </DockPanel>
</UserControl>