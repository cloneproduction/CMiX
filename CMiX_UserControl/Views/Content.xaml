<UserControl
    x:Class="CMiX.Views.Content"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="583.667"
    d:DesignWidth="278"
    mc:Ignorable="d">
    
    <DockPanel LastChildFill="True">
        <Border 
            DockPanel.Dock="Top">
            <DockPanel>
                <Button 
                    DockPanel.Dock="Right"
                    Margin="0, 0, 4, 0"
                    Command="{Binding Path=ResetSelfCommand}"
                    Height="15" 
                    Width="15" 
                    Style="{StaticResource ButtonBase}"
                    Content="R"
                    />
                <Button 
                    Margin="2, 0"
                    DockPanel.Dock="Right"
                    Command="{Binding Path=PasteSelfCommand}"
                    Height="15" 
                    Width="15" 
                    Style="{StaticResource ButtonBase}"
                    Content="P"
                    />
                <Button 
                    DockPanel.Dock="Right"
                    Command="{Binding Path=CopySelfCommand}"
                    Height="15" 
                    Width="15" 
                    Style="{StaticResource ButtonBase}"
                    Content="C"
                    />
                <Label
                    Style="{StaticResource LabelBase}"
                    HorizontalAlignment="Left"
                    Content="CONTENT"
                    DockPanel.Dock="Bottom"
                    FontWeight="SemiBold"
                    FontSize="12"
                    />
            </DockPanel>
        </Border>
        <Border>
            <DockPanel>
                <Border 
                    Margin="0, 4, 0, 8" 
                    DockPanel.Dock="Top" 
                    Style="{StaticResource BorderContainer}">
                    <Views:BeatModifier 
                        Height="20" 
                        DataContext="{Binding BeatModifier}"
                        />
                </Border>
                <TabControl 
                    DockPanel.Dock="Bottom" 
                    AllowDrop="True" 
                    Style="{StaticResource TabControlBase}">
                    <TabItem Width="25"
                         Height="25"
                         HorizontalAlignment="Left"
                         DragOver="TabItem_DragOver"
                         Style="{StaticResource TabItemBase}">
                        <TabItem.Header>
                            <Image Height="15" Width="auto" Opacity="0.75">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Cube.png"/>
                                </Image.Source>
                            </Image>
                        </TabItem.Header>
                        <Views:Geometry
                            DataContext="{Binding Geometry}"
                            DockPanel.Dock="Bottom" 
                            />
                    </TabItem>
                    <TabItem  
                        HorizontalAlignment="Left"
                        DragOver="TabItem_DragOver"
                        Style="{StaticResource TabItemBase}">
                        <TabItem.Header>
                            <Image Height="15" Width="auto" Opacity="0.75">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Texture.png"/>
                                </Image.Source>
                            </Image>
                        </TabItem.Header>
                        <Views:Texture
                            DataContext="{Binding Texture}"
                            DockPanel.Dock="Bottom" 
                            />
                    </TabItem>
                    <TabItem 
                        HorizontalAlignment="Left"
                        DragOver="TabItem_DragOver"
                        Style="{StaticResource TabItemBase}">
                        <TabItem.Header>
                            <Image Height="15" Width="auto" Opacity="0.75">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Effect.png"/>
                                </Image.Source>
                            </Image>
                        </TabItem.Header>
                        <Views:PostFX
                            DataContext="{Binding PostFX}"
                            DockPanel.Dock="Bottom" 
                            />
                    </TabItem>
                </TabControl>
            </DockPanel>
        </Border>
    </DockPanel>
</UserControl>