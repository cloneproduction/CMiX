<UserControl x:Class="CMiX.Views.GeometryFX"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:CMiX.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="24.167" d:DesignWidth="313.107">
    <StackPanel>
        <Border DockPanel.Dock="Bottom">
            <StackPanel x:Name="TexFXControl">
                <Controls:CustomSlider
                        Height="20"
                        Margin="0,2,0,1"
                        Caption="Explode"
                        Value="{Binding Amount, Mode=TwoWay}"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
