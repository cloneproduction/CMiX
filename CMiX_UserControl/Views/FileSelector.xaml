<UserControl x:Class="CMiX.Views.FileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:CMiX.Controls"
             xmlns:CMiX="clr-namespace:CMiX"
             xmlns:Views="clr-namespace:CMiX.Views"
             xmlns:dd="urn:gong-wpf-dragdrop"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <CMiX:PathToFilenameConverter x:Key="PathToFileName" />
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <DockPanel Height="20" DockPanel.Dock="Top">
            <Menu
                Grid.Row="0"
                Grid.Column="1"
                Height="15"
                HorizontalAlignment="Left"
                DockPanel.Dock="Right"
                FlowDirection="RightToLeft"
                Focusable="False"
                Style="{DynamicResource MenuBase}">
                <MenuItem
                    x:Name="FileMenu"
                    Width="15"
                    Height="15"
                    Padding="6"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Focusable="False"
                    FontSize="11"
                    Header="..."
                    Style="{StaticResource MenuItemBase}">
                    <MenuItem
                        Command="{Binding ClearSelectedCommand}"
                        FontSize="11"
                        Header="Clear Selected"
                        Template="{StaticResource SubMenuItemBase}" />
                    <MenuItem
                        Command="{Binding ClearUnselectedCommand}"
                        FontSize="11"
                        Header="Clear Unselected"
                        Template="{DynamicResource SubMenuItemBase}" />
                    <Separator HorizontalAlignment="Stretch" Background="{StaticResource Color}" />
                    <MenuItem
                        Command="{Binding ClearAllCommand}"
                        FontSize="11"
                        Header="Clear All"
                        Template="{StaticResource SubMenuItemBase}" />
                </MenuItem>
            </Menu>
            <Label
                Grid.Column="0"
                HorizontalAlignment="Left"
                Content="{Binding Title, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type Controls:FileSelector}}}"
                DockPanel.Dock="Left"
                Style="{StaticResource LabelBase}" />
        </DockPanel>
        <Border HorizontalAlignment="Stretch">
            <Controls:CMiXListBox
                Height="200"
                x:Name="FileNameList"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                AllowDrop="True"
                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                ItemsSource="{Binding FilePaths}"
                Background="Transparent"
                dd:DragDrop.IsDragSource="true"
                dd:DragDrop.IsDropTarget="True"
                dd:DragDrop.DropHandler="{Binding}"
                SelectionMode="{Binding ModeSelection, RelativeSource={RelativeSource AncestorType={x:Type Controls:FileSelector}}}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                Style="{DynamicResource ListBoxBase}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Views:FileNameItem/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style BasedOn="{StaticResource BaseListBoxItemStyle}" TargetType="ListBoxItem">
                        <Setter Property="IsSelected" Value="{Binding FileIsSelected, Mode=TwoWay}" />
                        <Setter Property="VerticalContentAlignment" Value="Bottom" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource Color}" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsSelected" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="{StaticResource HighLightColor}" />
                            </MultiTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </Controls:CMiXListBox>
        </Border>
    </StackPanel>
</UserControl>
