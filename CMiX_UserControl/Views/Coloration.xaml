<UserControl
    x:Class="CMiX.Views.Coloration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:Controls="clr-namespace:CMiX.Controls"
    xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="527.333"
    d:DesignWidth="286.667"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <CMiX:ColorToStringConverter x:Key="ColorToString" />
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <Border                 
            BorderThickness="0, 0, 0, 2"
            BorderBrush="{StaticResource DarkColor}">
            <Label
                Height="25"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Style="{StaticResource LabelBase}"
                Content="COLORATION"
                DockPanel.Dock="Top"/>
        </Border>
        <Border Padding="4" Margin="0, 4" Background="{StaticResource DarkerColor}" CornerRadius="2">
            <Views:BeatModifier Height="25" DataContext="{Binding BeatModifier}"/>
        </Border>
        <Border             
            DockPanel.Dock="Bottom"
            Background="{StaticResource DarkerColor}"
            Padding="4"
            CornerRadius="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TabControl
                    Margin="0,2,0,2"
                    Background="{StaticResource DarkColor}"
                    DockPanel.Dock="Top"
                    Focusable="False"
                    Style="{StaticResource TabControlBase}">
                    <TabItem
                    Height="25"
                    Header="Foreground"
                    IsSelected="True"
                    Style="{StaticResource TabItemBase}">
                    <colorpicker:ColorPicker
                        x:Name="Color"
                        Margin="4"
                        Background="{StaticResource DarkerColor}"
                        SelectedColor="{Binding ObjColor, Mode=TwoWay}" />
                    </TabItem>
                    <TabItem Header="Background" Style="{StaticResource TabItemBase}">
                        <colorpicker:ColorPicker
                        x:Name="BgColor"
                        Margin="4"
                        Background="{StaticResource DarkerColor}"
                        SelectedColor="{Binding BgColor, Mode=TwoWay}" />
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
        <Border             
            DockPanel.Dock="Bottom"
            Background="{StaticResource DarkerColor}"
            Margin="0, 4"
            Padding="4"
            CornerRadius="2">
            <StackPanel Grid.Row="1">
                <Label
                    Margin="0,2,0,2"
                    Height="25"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="Modifiers"
                    Foreground="{DynamicResource TextBase}" />
                <Views:RangeControl 
                    x:Name="Hue"
                    Height="25"
                    DataContext="{Binding Hue}"/>
                <Views:RangeControl 
                    x:Name="Sat" 
                    Margin="0, 2"
                    Height="25"
                    DataContext="{Binding Saturation}"/>
                <Views:RangeControl 
                    x:Name="Val" 
                    Height="25"
                    DataContext="{Binding Value}"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
