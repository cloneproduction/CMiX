<UserControl x:Class="CMiX.Views.ColorSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:CMiX.Controls"
             xmlns:CMiX="clr-namespace:CMiX"
             mc:Ignorable="d" 
             d:DesignHeight="342" d:DesignWidth="341">

    <UserControl.Resources>
        <ResourceDictionary>
            <CMiX:ColorToDoubleConverter x:Key="ColorToDoubleConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <controls:HueWheel Hue="{Binding ObjColor, Converter={StaticResource ColorToDoubleConverter}, ConverterParameter= r, Mode=TwoWay}"/>
    </Grid>
</UserControl>
