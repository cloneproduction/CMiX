<UserControl
    x:Class="CMiX.ChannelLayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:Controls="clr-namespace:CMiX.Controls"
    xmlns:ViewModels="clr-namespace:CMiX.ViewModels"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="94.977"
    d:DesignWidth="293.051"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="BlendMode" MethodName="GetNames" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="ViewModels:BlendMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Border
        Padding="4"
        CornerRadius="2"
        Background="{StaticResource DarkerColor}"
        BorderThickness="2">
        <!--<Border.Style>
            <Style TargetType="{x:Type Border}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Enabled}" Value="true">
                        <Setter Property="BorderBrush">
                            <Setter.Value>
                                <SolidColorBrush Color="{Binding Coloration.ObjColor}" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <RadioButton
                Margin="0,0,2,0"
                AllowDrop="True"
                GroupName="SelectLayer"
                IsChecked="{Binding Enabled, Mode=TwoWay}"
                Style="{StaticResource RadioButtonBase}">
                <RadioButton.Background>
                    <SolidColorBrush Color="{Binding Coloration.ObjColor}" />
                </RadioButton.Background>
            </RadioButton>
            <StackPanel Grid.Column="1">
                <Controls:CustomSlider
                    Focusable="False"
                    Height="25"
                    Caption="Alpha"
                    Value="{Binding Fade}" />
                <Views:BeatModifier
                    Focusable="False"
                    DataContext="{Binding BeatModifier}"
                    Margin="0,2"
                    Height="25"/>
                <ComboBox
                    Focusable="False"
                    Height="25"
                    Style="{StaticResource ComboBoxBase}"
                    SelectedItem="{Binding BlendMode}"
                    SelectedIndex="0"
                    ItemsSource="{Binding Source={StaticResource BlendMode}}">
                </ComboBox>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
