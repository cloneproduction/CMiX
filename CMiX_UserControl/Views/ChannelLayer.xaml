<UserControl
    x:Class="CMiX.ChannelLayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:Controls="clr-namespace:CMiX.Controls"
    xmlns:ViewModels="clr-namespace:CMiX.ViewModels"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="77.644"
    d:DesignWidth="319.051"
    mc:Ignorable="d">
    <UserControl.Resources>
        <CMiX:EnumToStringConverter x:Key="EnumToString"/>
        <ObjectDataProvider x:Key="BlendMode" MethodName="GetNames" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="ViewModels:BlendMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Border
        Padding="4"
        CornerRadius="2"
        Background="{StaticResource DarkerColor}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.15*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <RadioButton
                Margin="0,0,2,0"
                AllowDrop="True"
                GroupName="SelectLayer"
                IsChecked="{Binding Enabled, Mode=TwoWay}"
                Style="{StaticResource RadioButtonLayer}">
                <RadioButton.Background>
                    <SolidColorBrush Color="{Binding Coloration.ObjColor}" />
                </RadioButton.Background>
            </RadioButton>
            <StackPanel Grid.Column="1">
                <Controls:CustomSlider
                    Focusable="False"
                    Caption="Alpha"
                    Value="{Binding Fade, Mode=TwoWay}" />
                <Views:BeatModifier
                    Focusable="False"
                    DataContext="{Binding BeatModifier}"
                    Margin="0,2"/>
                <ComboBox 
                    Height="25"
                    Style="{StaticResource ComboBoxBase}"
                    ItemContainerStyle="{StaticResource BaseListBoxItemStyle}"
                    SelectedItem="{Binding BlendMode}"
                    ItemsSource="{Binding Source={StaticResource BlendMode}}">
                </ComboBox>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>