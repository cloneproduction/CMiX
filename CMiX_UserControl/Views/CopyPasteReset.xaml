<UserControl x:Class="CMiX.Views.CopyPasteReset"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CMiX.Views"
             mc:Ignorable="d" 
             d:DesignHeight="18" d:DesignWidth="49">
    <StackPanel Orientation="Horizontal">
        <Button 
            DockPanel.Dock="Right"
            Height="15" 
            Width="15"
            Content="C"
            Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type FrameworkElement}}, Path=DataContext.CopyCommand}"
            Style="{StaticResource ButtonBase}"/>
        <Button 
            Margin="2, 0"
            DockPanel.Dock="Right"
            Height="15" 
            Width="15"
            Content="P"
            Command="{Binding Path=PasteCommand}"
            Style="{StaticResource ButtonBase}"/>
        <Button 
            DockPanel.Dock="Right"
            Height="15" 
            Width="15"
            Content="R"
            Command="{Binding Path=ResetCommand}"
            Style="{StaticResource ButtonBase}"/>
    </StackPanel>
</UserControl>
