<UserControl
    x:Class="CMiX.Views.Mask"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="812"
    d:DesignWidth="321"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <Border 
            DockPanel.Dock="Top"            
            BorderThickness="0, 0, 0, 2"
            BorderBrush="{StaticResource DarkColor}">
            <Grid>
                <Label
                Margin="0"
                Style="{StaticResource LabelBase}"
                Content="MASK"
                DockPanel.Dock="Bottom"
                FontWeight="SemiBold"
                FontSize="12"/>
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                    <ToggleButton
                        Grid.Row="0"
                        Width="20"
                        Margin="4"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center"
                        IsChecked="{Binding Enable, Mode=TwoWay}"
                        Style="{StaticResource ToggleButtonBase}" />
                    <ToggleButton
                        Grid.Row="0"
                        Width="20"
                        Margin="4"
                        Content="Keep"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center"
                        IsChecked="{Binding KeepOriginal, Mode=TwoWay}"
                        Style="{StaticResource ToggleButtonBase}" />
                </StackPanel>
            </Grid>
        </Border>
        <Border DockPanel.Dock="Top" Margin="0, 8" Style="{StaticResource BorderContainer}">
            <Views:BeatModifier Height="20" DataContext="{Binding BeatModifier}"/>
        </Border>
        <TabControl DockPanel.Dock="Bottom" Style="{StaticResource TabControlBase}">
            <TabItem Header="GEOMETRY" Style="{StaticResource TabItemBase}">
                <Views:Geometry
                    Margin="0, 8, 0, 0"
                    DataContext="{Binding Geometry}"
                    DockPanel.Dock="Bottom" />
            </TabItem>
            <TabItem Header="TEXTURE" Style="{StaticResource TabItemBase}">
                <Views:Texture
                    Margin="0, 8, 0, 0"
                    DataContext="{Binding Texture}"
                    DockPanel.Dock="Top" />
            </TabItem>
            <TabItem Header="POSTFX" Style="{StaticResource TabItemBase}">
                <Views:PostFX
                    Margin="0, 8, 0, 0"
                    DataContext="{Binding PostFX}"
                    DockPanel.Dock="Bottom" />
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>