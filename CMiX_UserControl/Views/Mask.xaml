<UserControl
    x:Class="CMiX.Views.Mask"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="812"
    d:DesignWidth="321"
    mc:Ignorable="d">
    
    <DockPanel LastChildFill="True">
        <Border 
            Padding="4, 0"
            DockPanel.Dock="Top">
            <DockPanel>
                <Label
                    Content="MASK"
                    DockPanel.Dock="Left"
                    FontWeight="SemiBold"
                    FontSize="12"
                    />
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                    <ToggleButton
                        ToolTip="Keep Original"
                        Grid.Row="0"
                        Height="15" 
                        Width="15"
                        Content="Keep"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center"
                        IsChecked="{Binding KeepOriginal, Mode=TwoWay}"
                        />
                    <ToggleButton
                        ToolTip="Enable"
                        Grid.Row="0"
                        Height="15" 
                        Width="15"
                        Margin="2, 0, 4, 0"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center"
                        IsChecked="{Binding Enable, Mode=TwoWay}"
                        />
                </StackPanel>
                <DockPanel LastChildFill="False">
                    <Button 
                        DockPanel.Dock="Right"
                        Command="{Binding Path=ResetCommand}"
                        Height="15" 
                        Width="15" 
                        Style="{StaticResource ButtonImage}"
                        >
                        <Button.Content>
                            <Image  Source="{StaticResource Reset}"/>
                        </Button.Content>
                        <Button.ToolTip>
                            <TextBlock Text="Reset"/>
                        </Button.ToolTip>
                    </Button>
                    <Button 
                        DockPanel.Dock="Right"
                        Margin="2, 0"
                        Command="{Binding DataContext.PasteMaskCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=2}}"
                        Height="15" 
                        Width="15" 
                        Style="{StaticResource ButtonImage}"
                        >
                        <Button.Content>
                            <Image  Source="{StaticResource Paste}"/>
                        </Button.Content>
                        <Button.ToolTip>
                            <TextBlock Text="Paste"/>
                        </Button.ToolTip>
                    </Button>
                    <Button 
                        DockPanel.Dock="Right"
                        Command="{Binding DataContext.CopyMaskCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=2}}"
                        Height="15" 
                        Width="15" 
                        Style="{StaticResource ButtonImage}"
                        >
                        <Button.Content>
                            <Image Source="{StaticResource Copy}"/>
                        </Button.Content>
                        <Button.ToolTip>
                            <TextBlock Text="Copy"/>
                        </Button.ToolTip>
                    </Button>
                </DockPanel>
            </DockPanel>
        </Border>
        <Border 
            Margin="0 ,4, 0, 8" 
            DockPanel.Dock="Top" 
            Style="{StaticResource BorderContainer}">
            <Views:BeatModifier 
                Height="20" 
                DataContext="{Binding BeatModifier}"
                />
        </Border>
        <TabControl 
            DockPanel.Dock="Bottom" 
            AllowDrop="True">
            <TabItem 
                Width="40"
                Height="30"
                HorizontalAlignment="Left"
                DragOver="TabItem_DragOver">
                <TabItem.Header>
                    <Image Source="{StaticResource Geometry}"  ToolTip="Geometry" Height="15" Width="auto" Opacity="0.75"/>
                </TabItem.Header>
                <Views:Geometry
                    DataContext="{Binding Geometry}"
                    DockPanel.Dock="Bottom" 
                    />
            </TabItem>
            <TabItem 
                Width="40"
                Height="30"
                HorizontalAlignment="Left"
                DragOver="TabItem_DragOver">
                <TabItem.Header>
                    <Image Source="{StaticResource Texture}" ToolTip="Texture" Height="15" Width="auto" Opacity="0.75"/>
                </TabItem.Header>
                <Views:Texture
                    DataContext="{Binding Texture}"
                    DockPanel.Dock="Top" 
                    />
            </TabItem>
            <TabItem 
                Width="40"
                Height="30"
                HorizontalAlignment="Left"
                DragOver="TabItem_DragOver">
                <TabItem.Header>
                    <Image Source="{StaticResource PostFX}" ToolTip="PostFX" Height="15" Width="auto" Opacity="0.75"/>
                </TabItem.Header>
                <Views:PostFX
                    DataContext="{Binding PostFX}"
                    DockPanel.Dock="Bottom" 
                    />
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>