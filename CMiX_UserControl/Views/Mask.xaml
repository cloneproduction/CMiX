<UserControl
    x:Class="CMiX.Views.Mask"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="812"
    d:DesignWidth="321"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <Border 
            DockPanel.Dock="Top"            
            BorderThickness="0, 0, 0, 2"
            BorderBrush="{StaticResource DarkColor}">
            <Grid>
                <Label
                    Grid.Column="1"
                    Height="25"
                    HorizontalAlignment="Stretch"
                    Style="{StaticResource LabelBase}"
                    Content="MASK"
                    DockPanel.Dock="Left"/>
                <ToggleButton
                    Grid.Row="0"
                    Width="20"
                    Margin="4"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Center"
                    IsChecked="{Binding Enable, Mode=TwoWay}"
                    Style="{StaticResource ToggleButtonBase}" />
            </Grid>
        </Border>
        <Border DockPanel.Dock="Top" Margin="0, 4" Padding="4" Background="{StaticResource DarkerColor}" CornerRadius="2">
            <Views:BeatModifier Height="25" DataContext="{Binding BeatModifier}"/>
        </Border>
        <Views:PostFX
            DataContext="{Binding PostFX}"
            DockPanel.Dock="Bottom" />
        <Views:Geometry
            DataContext="{Binding Geometry}"
            DockPanel.Dock="Bottom" />
        <Views:Texture
            Margin="0,4"
            DataContext="{Binding Texture}"
            DockPanel.Dock="Top" />
    </DockPanel>
</UserControl>
