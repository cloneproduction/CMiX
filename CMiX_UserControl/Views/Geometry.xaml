<UserControl
    x:Class="CMiX.Views.Geometry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Resources="clr-namespace:CMiX.MVVM.Resources;assembly=CMiX_MVVM"
    xmlns:ViewModels="clr-namespace:CMiX.ViewModels"
    xmlns:Views = "clr-namespace:CMiX.Views"
    xmlns:MVVM.Views="clr-namespace:CMiX.MVVM.Views;assembly=CMiX_MVVM"
    xmlns:MVVM.ViewModels="clr-namespace:CMiX.MVVM.ViewModels;assembly=CMiX_MVVM"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1160.911"
    d:DesignWidth="364.712"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <Resources:BindingProxy x:Key="proxy" Data="{Binding}" />
            <ObjectDataProvider x:Key="FileMask" MethodName="GetNames" ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="MVVM.ViewModels:GeometryFileMask"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <Resources:BoolInverterConverter x:Key="BoolInverter" />
            <Resources:EnumToStringConverter x:Key="EnumToString" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Border 
        BorderBrush="{StaticResource HighDarkerColor}"
        Background="{StaticResource HighDarkerColor}">
        <StackPanel>
            <Border
                Height="25"
                Margin="0, 0, 0, 2"
                Background="{StaticResource DarkColor}"
                Padding="4"
                BorderBrush="{StaticResource HighDarkerColor}"
                DockPanel.Dock="Top">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem
                            Padding="8, 4"
                            Foreground="{StaticResource TextBase}"
                            Command="{Binding Data.CopyGeometryCommand, Source={StaticResource proxy}}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="10" Height="10" Source="{StaticResource Copy}" />
                                    <Separator Margin="8, 0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                    <TextBlock Text="Copy Geometry"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem
                            Padding="8, 4"
                            Foreground="{StaticResource TextBase}"
                            Command="{Binding Data.PasteGeometryCommand, Source={StaticResource proxy}}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="10" Height="10" Source="{StaticResource Paste}" />
                                    <Separator Margin="8, 0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                    <TextBlock Text="Paste Geometry"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem
                                Padding="8, 4"
                                Foreground="{StaticResource TextBase}"
                                Command="{Binding Data.ResetGeometryCommand, Source={StaticResource proxy}}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="10" Height="10" Source="{StaticResource Reset}" />
                                    <Separator Margin="8, 0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                    <TextBlock Text="Reset Geometry"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                    </ContextMenu>
                </Border.ContextMenu>
                <DockPanel 
                    VerticalAlignment="Center" 
                    LastChildFill="False">
                    <TextBlock
                        Margin="4, 0, 0, 0"
                        Text="GEOMETRY"
                        Foreground="{StaticResource TextBase}"/>
                </DockPanel>
            </Border>
            
            <Border 
                Margin="0, 2"
                DockPanel.Dock="Bottom"
                Background="{StaticResource DarkerColor}"
                Style="{StaticResource BorderContainer}">
                <MVVM.Views:FileSelector 
                    Height="300"
                    DataContext="{Binding FileSelector}"
                    />
            </Border>
            <Border
                Margin="0, 2"
                DockPanel.Dock="Bottom"
                Style="{StaticResource BorderContainer}">
                <Grid Height="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Text="Count" 
                        Margin="4, 0, 0, 0" 
                        Foreground="{StaticResource TextBase}" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        />
                    <MVVM.Views:Counter
                        Grid.Column="1"
                        Height="20"
                        HorizontalAlignment="Stretch"
                        DataContext="{Binding Counter}"
                        />
                </Grid>
            </Border>
            <Border  Margin="0, 2" Style="{StaticResource BorderContainer}">
                <StackPanel>
                    <Border 
                        Margin="0, 0, 0 4"
                        Height="25">
                        <TextBlock
                            VerticalAlignment="Center"
                            Margin="4, 0, 0, 0"
                            Text="Transforms"
                            Foreground="{StaticResource TextBase}"
                            />
                    </Border>
                    <Grid Height="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="0.3*"/>
                        </Grid.ColumnDefinitions>
                        <ToggleButton
                            Grid.Column="1"
                            x:Name="GeometryTranslate"
                            Keyboard.KeyDown="Toggle_KeyDown"
                            Margin="2, 0, 0, 0"
                            Content="{Binding TranslateMode.Mode, Converter={StaticResource EnumToString}}"
                            IsHitTestVisible="{Binding ElementName=GeometryTranslatePopup, Path=IsOpen, Converter={StaticResource BoolInverter}}"
                            />
                        <Popup
                            x:Name="GeometryTranslatePopup"
                            Keyboard.KeyDown="Popup_KeyDown"
                            Width="432"
                            AllowsTransparency="True"
                            IsOpen="{Binding IsChecked, ElementName=GeometryTranslate}"
                            Placement="Center"
                            StaysOpen="False">
                            <ViewModels:TranslateSelector DataContext="{Binding TranslateMode}"/>
                        </Popup>
                        <MVVM.Views:Slider
                            Grid.Column="0"
                            Margin="1, 0, 0, 0"
                            Caption="Translate"
                            DataContext="{Binding Translate}"
                            />
                    </Grid>
                    <Grid Height="20" Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="165*"  />
                            <ColumnDefinition Width="111*"/>
                            <ColumnDefinition Width="83*"/>
                        </Grid.ColumnDefinitions>
                        <ToggleButton
                            Grid.Column="2"
                            x:Name="GeometryScale"
                            Keyboard.KeyDown="Toggle_KeyDown"
                            Margin="2,0,-0.333,0"
                            Content="{Binding ScaleMode.Mode, Converter={StaticResource EnumToString}}"
                            IsHitTestVisible="{Binding ElementName=GeometryScalePopup, Path=IsOpen, Converter={StaticResource BoolInverter}}"
                            />
                        <Popup
                            x:Name="GeometryScalePopup"
                            Keyboard.KeyDown="Popup_KeyDown"
                            Width="432"
                            AllowsTransparency="True"
                            IsOpen="{Binding IsChecked, ElementName=GeometryScale}"
                            Placement="Center"
                            StaysOpen="False" Grid.ColumnSpan="3" Margin="0,0,-73.333,0">
                            <ViewModels:ScaleSelector DataContext="{Binding ScaleMode}"/>
                        </Popup>
                        <MVVM.Views:Slider
                            Grid.Column="0"
                            Margin="1, 0, 0, 0"
                            Caption="Scale"
                            DataContext="{Binding Scale}" Grid.ColumnSpan="2"
                            />
                    </Grid>
                    <Grid Height="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="0.3*"/>
                        </Grid.ColumnDefinitions>
                        <ToggleButton
                            Grid.Column="1"
                            x:Name="GeometryRotation"
                            Keyboard.KeyDown="Toggle_KeyDown"
                            Margin="2, 0, 0, 0"
                            Content="{Binding RotationMode.Mode, Converter={StaticResource EnumToString}}"
                            IsHitTestVisible="{Binding ElementName=GeometryRotationPopup, Path=IsOpen, Converter={StaticResource BoolInverter}}"
                            />
                        <Popup 
                            x:Name="GeometryRotationPopup"
                            Keyboard.KeyDown="Popup_KeyDown"
                            Width="432"
                            AllowsTransparency="True"
                            IsOpen="{Binding IsChecked, ElementName=GeometryRotation}"
                            Placement="Center"
                            StaysOpen="False">
                            <ViewModels:RotationSelector DataContext="{Binding RotationMode}"/>
                        </Popup>
                        <MVVM.Views:Slider
                            Grid.Column="0"
                            Margin="1, 0, 0, 0"
                            Caption="Rotate"
                            DataContext="{Binding Rotation}"
                            />
                    </Grid>
                </StackPanel>
            </Border>
            <Border  Margin="0, 2" Style="{StaticResource BorderContainer}" DockPanel.Dock="Bottom">
                <DockPanel Height="25">
                    <ToggleButton
                        HorizontalAlignment="left"
                        Height="15"
                        Width="15"
                        Margin="4"
                        Grid.Column="0"
                        IsChecked="{Binding KeepAspectRatio}"
                        />
                    <TextBlock 
                        Text="Aspect Ratio" 
                        Margin="4, 0" 
                        Foreground="{StaticResource TextBase}" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        />
                </DockPanel>
            </Border>
            <Border 
                Margin="0, 2" 
                Style="{StaticResource BorderContainer}" 
                DockPanel.Dock="Bottom">
                <DockPanel Height="25">

                    <ToggleButton
                        HorizontalAlignment="left"
                        Height="15"
                        Width="15"
                        Margin="4"
                        IsChecked="{Binding Is3D, Mode=TwoWay}"
                        />
                    <TextBlock 
                        Text="3D Space"
                        Margin="4, 0, 0, 0"
                        VerticalAlignment="Center" 
                        Foreground="{StaticResource TextBase}"
                        />
                </DockPanel>
            </Border>

            <Views:GeometryFX  
                Margin="0, 2"
                    DockPanel.Dock="Bottom" 
                    DataContext="{Binding GeometryFX}"
                    />
        </StackPanel>
    </Border>
</UserControl>