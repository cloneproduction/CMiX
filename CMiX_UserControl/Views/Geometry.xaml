<UserControl
    x:Class="CMiX.Views.Geometry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:Controls="clr-namespace:CMiX.Controls"
    xmlns:ViewModels="clr-namespace:CMiX.ViewModels"
    xmlns:Views = "clr-namespace:CMiX.Views"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="676.111"
    d:DesignWidth="367.112"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ObjectDataProvider x:Key="FileMask" MethodName="GetNames" ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="ViewModels:GeometryFileMask"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <CMiX:BoolInverterConverter x:Key="BoolInverter" />
            <CMiX:EnumToStringConverter x:Key="EnumToString" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Border 
        BorderBrush="{StaticResource HighDarkerColor}"
        Background="{StaticResource HighDarkerColor}">
        <DockPanel>
            <Border Margin="0, 2" Style="{StaticResource BorderContainer}" DockPanel.Dock="Bottom">
                <Views:GeometryFX  
                    DockPanel.Dock="Bottom" 
                    DataContext="{Binding GeometryFX}"
                    />
            </Border>
            <Border Style="{StaticResource BorderContainer}" DockPanel.Dock="Bottom">
                <DockPanel Height="25">
                    <TextBlock 
                        Text="Aspect Ratio" 
                        Margin="4, 0" 
                        Foreground="{StaticResource TextBase}" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        />
                    <ToggleButton
                        HorizontalAlignment="Right"
                        Height="15"
                        Width="15"
                        Margin="4"
                        Grid.Column="0"
                        IsChecked="{Binding KeepAspectRatio, Mode=TwoWay}"
                        Style="{StaticResource ToggleButtonBase}" 
                        />
                </DockPanel>
            </Border>
            <Border 
                Margin="0, 2" 
                Style="{StaticResource BorderContainer}" 
                DockPanel.Dock="Bottom">
                <DockPanel Height="25">
                    <TextBlock 
                        Text="3D Space"
                        Margin="4, 0, 0, 0"
                        VerticalAlignment="Center" 
                        Foreground="{StaticResource TextBase}"
                        />
                    <ToggleButton
                        HorizontalAlignment="Right"
                        Height="15"
                        Width="15"
                        Margin="4"
                        IsChecked="{Binding Is3D, Mode=TwoWay}"
                        Style="{StaticResource ToggleButtonBase}" 
                        />
                </DockPanel>
            </Border>
            <Border 
                DockPanel.Dock="Bottom"
                Background="{StaticResource DarkerColor}"
                Style="{StaticResource BorderContainer}">
                <StackPanel>
                    <Grid Height="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="0.3*"/>
                        </Grid.ColumnDefinitions>
                        <ToggleButton
                            Grid.Column="1"
                            x:Name="GeometryTranslate"
                            Keyboard.KeyDown="Toggle_KeyDown"
                            Margin="2, 0, 0, 0"
                            Style="{StaticResource ToggleButtonBase}" 
                            Content="{Binding TranslateMode.TranslateMode, Converter={StaticResource EnumToString}}"
                            IsHitTestVisible="{Binding ElementName=GeometryTranslatePopup, Path=IsOpen, Converter={StaticResource BoolInverter}}"
                            />
                        <Popup
                            x:Name="GeometryTranslatePopup"
                            Keyboard.KeyDown="Popup_KeyDown"
                            Width="432"
                            AllowsTransparency="True"
                            IsOpen="{Binding IsChecked, ElementName=GeometryTranslate}"
                            Placement="Center"
                            StaysOpen="False">
                            <ViewModels:TranslateSelector DataContext="{Binding TranslateMode}"/>
                        </Popup>
                        <Views:Slider
                            Grid.Column="0"
                            Margin="1, 0, 0, 0"
                            Caption="Translate"
                            DataContext="{Binding TranslateAmount}"
                            />
                    </Grid>
                    <Grid Height="20" Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="0.3*"/>
                        </Grid.ColumnDefinitions>
                        <ToggleButton
                            Grid.Column="1"
                            x:Name="GeometryScale"
                            Keyboard.KeyDown="Toggle_KeyDown"
                            Margin="2, 0, 0, 0"
                            Style="{StaticResource ToggleButtonBase}" 
                            Content="{Binding ScaleMode.ScaleMode, Converter={StaticResource EnumToString}}"
                            IsHitTestVisible="{Binding ElementName=GeometryScalePopup, Path=IsOpen, Converter={StaticResource BoolInverter}}"
                            />
                        <Popup
                            x:Name="GeometryScalePopup"
                            Keyboard.KeyDown="Popup_KeyDown"
                            Width="432"
                            AllowsTransparency="True"
                            IsOpen="{Binding IsChecked, ElementName=GeometryScale}"
                            Placement="Center"
                            StaysOpen="False">
                            <ViewModels:ScaleSelector 
                                DataContext="{Binding ScaleMode}"
                                />
                        </Popup>
                        <Views:Slider
                            Grid.Column="0"
                            Margin="1, 0, 0, 0"
                            Caption="Scale"
                            DataContext="{Binding ScaleAmount}"
                            />
                    </Grid>
                    <Grid Height="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="0.3*"/>
                        </Grid.ColumnDefinitions>
                        <ToggleButton
                            Grid.Column="1"
                            x:Name="GeometryRotation"
                            Keyboard.KeyDown="Toggle_KeyDown"
                            Margin="2, 0, 0, 0"
                            Style="{StaticResource ToggleButtonBase}" 
                            Content="{Binding RotationMode.RotationMode, Converter={StaticResource EnumToString}}"
                            IsHitTestVisible="{Binding ElementName=GeometryRotationPopup, Path=IsOpen, Converter={StaticResource BoolInverter}}"
                            />
                        <Popup 
                            x:Name="GeometryRotationPopup"
                            Keyboard.KeyDown="Popup_KeyDown"
                            Width="432"
                            AllowsTransparency="True"
                            IsOpen="{Binding IsChecked, ElementName=GeometryRotation}"
                            Placement="Center"
                            StaysOpen="False">
                            <ViewModels:RotationSelector 
                                DataContext="{Binding RotationMode}"
                                />
                        </Popup>
                        <Views:Slider
                            Grid.Column="0"
                            Margin="1, 0, 0, 0"
                            Caption="Rotate"
                            DataContext="{Binding RotationAmount}"
                            />
                    </Grid>
                </StackPanel>
            </Border>
            <Border
                Margin="0, 2"
                DockPanel.Dock="Bottom"
                Style="{StaticResource BorderContainer}">
                <Grid Height="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Text="Count" 
                        Margin="4, 0, 0, 0" 
                        Foreground="{StaticResource TextBase}" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        />
                    <Views:Counter
                        Grid.Column="1"
                        Height="20"
                        HorizontalAlignment="Stretch"
                        DataContext="{Binding Counter}"
                        />
                </Grid>
            </Border>
            <Border 
                Background="{StaticResource DarkColor}"
                Padding="4"
                BorderBrush="{StaticResource HighDarkerColor}"
                DockPanel.Dock="Top">
                <DockPanel LastChildFill="False">
                    <TextBlock
                        Margin="4, 0, 0, 0"
                        Text="Geometry"
                        Foreground="{StaticResource TextBase}"/>
                    <Button 
                        DockPanel.Dock="Right"
                        Command="{Binding Path=ResetSelfCommand}"
                        Height="15" 
                        Width="15" 
                        Style="{StaticResource ButtonBase}"
                        Content="R"
                        />
                    <Button 
                        DockPanel.Dock="Right"
                        Margin="2, 0"
                        Command="{Binding Path=PasteSelfCommand}"
                        Height="15" 
                        Width="15" 
                        Style="{StaticResource ButtonBase}"
                        Content="P"
                        />
                    <Button 
                        DockPanel.Dock="Right"
                        Command="{Binding Path=CopySelfCommand}"
                        Height="15" 
                        Width="15" 
                        Style="{StaticResource ButtonBase}"
                        Content="C"
                        />
                </DockPanel>
            </Border>
            <Border 
                DockPanel.Dock="Bottom"
                Margin="0, 2, 0, 0"
                Style="{StaticResource BorderContainer}">
                <Views:FileSelector DataContext="{Binding FileSelector}"/>
            </Border>
        </DockPanel>
    </Border>
</UserControl>