<UserControl x:Class="CMiX.Studio.Views.LFO"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:CMiX.Studio.Views"
             xmlns:Controls="clr-namespace:CMiX.MVVM.Controls;assembly=CMiX.MVVM"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="636.667"
             d:DesignWidth="316.667"
             mc:Ignorable="d">

    <Border IsEnabled="{Binding IsEnabled}">
        <StackPanel>
            <Views:Range Margin="0, 2" DataContext="{Binding Range}"/>
            <Views:Easing DataContext="{Binding Easing}" Margin="0, 2"/>
            <Controls:CMiXToggleButton
                DockPanel.Dock="Right"
                Caption="Invert"
                Style="{StaticResource CMiXToggleButtonStyle}"
                Height="20"
                Margin="0, 2"
                HorizontalAlignment="Right"/>
        </StackPanel>
    </Border>
</UserControl>