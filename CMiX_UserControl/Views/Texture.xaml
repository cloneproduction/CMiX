<UserControl
    x:Class="CMiX.Views.Texture"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:Controls="clr-namespace:CMiX.Controls"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:ViewModels="clr-namespace:CMiX.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="411.334"
    d:DesignWidth="380"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="InvertMode" MethodName="GetNames" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="ViewModels:InvertMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    
    <Border Background="{StaticResource HighDarkerColor}">
        <DockPanel>
            <Border 
                Background="{StaticResource DarkColor}"
                Padding="4"
                DockPanel.Dock="Top">
                <DockPanel LastChildFill="False">
                    <TextBlock
                        Text="Texture"
                        Foreground="{StaticResource TextBase}"
                        Margin="8, 0, 0, 0">
                    </TextBlock>
                    <Button 
                        DockPanel.Dock="Right"
                        Command="{Binding Path=ResetSelfCommand}"
                        Height="15" 
                        Width="15" 
                        Style="{StaticResource ButtonBase}"
                        Content="R"
                    />
                    <Button 
                        DockPanel.Dock="Right"
                        Margin="2, 0"
                        Command="{Binding Path=PasteSelfCommand}"
                        Height="15" 
                        Width="15" 
                        Style="{StaticResource ButtonBase}"
                        Content="P"
                    />
                    <Button 
                        DockPanel.Dock="Right"
                        Command="{Binding Path=CopySelfCommand}"
                        Height="15" 
                        Width="15" 
                        Style="{StaticResource ButtonBase}"
                        Content="C"
                    />
                </DockPanel>
            </Border>
            <Border 
                DockPanel.Dock="Bottom"
                Margin="0, 2, 0, 0"
                Style="{StaticResource BorderContainer}">
                <DockPanel>
                    <Grid
                        Height="20"
                        Margin="0, 2, 0, 0"
                        DockPanel.Dock="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.3*" />
                        </Grid.ColumnDefinitions>
                    <CMiX:CMiXComboBox
                        Grid.Column="1"
                        Margin="1, 0, 0, 0"
                        ItemsSource="{Binding Source={StaticResource InvertMode}}"
                        SelectedItem="{Binding InvertMode}"
                        SelectedIndex="0"
                        ItemContainerStyle="{StaticResource BaseListBoxItemStyle}"
                        Style="{StaticResource ComboBoxBase}" />
                        <Controls:CustomSlider
                        Grid.Column="0"
                        Caption="Invert"
                        Value="{Binding Invert, Mode=TwoWay}" />
                    </Grid>
                    <Controls:CustomSlider
                        Margin="0, 1, 0, 1"
                        Caption="Keying"
                        DockPanel.Dock="Bottom"
                        Value="{Binding Keying, Mode=TwoWay}" />
                    <Controls:CMiXSliderCentered
                        Margin="0, 1, 0, 1"
                        Caption="Saturation"
                        DockPanel.Dock="Bottom"
                        Value="{Binding Saturation, Mode=TwoWay}" />
                    <Controls:CMiXSliderCentered
                        Margin="0, 1, 0, 1"
                        Caption="Contrast"
                        DockPanel.Dock="Bottom"
                        Value="{Binding Contrast, Mode=TwoWay}" />
                    <Controls:CMiXSliderCentered
                        Margin="0, 1, 0, 1"
                        Caption="Brightness"
                        DockPanel.Dock="Bottom"
                        Value="{Binding Brightness, Mode=TwoWay}" />
                    <Controls:FileSelector
                        DockPanel.Dock="Top"
                        Title="Filenames"
                        Margin="0, 2, 0, 0"
                        ModeSelection="Extended"
                        Items="{Binding TexturePaths}"/>
                </DockPanel>
            </Border>
        </DockPanel>
    </Border>
</UserControl>
