<UserControl
    x:Class="CMiX.Views.Texture"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:Controls="clr-namespace:CMiX.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="310.667"
    d:DesignWidth="366.333"
    mc:Ignorable="d">
    <Border             
        DockPanel.Dock="Bottom"
        Background="{StaticResource DarkerColor}"
        Padding="4"
        CornerRadius="2">
        <DockPanel
                DockPanel.Dock="Bottom">
            <Grid
                Height="25"
                Margin="0,1,0,0"
                DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <CMiX:CMiXComboBox
                    Grid.Column="0"
                    Margin="1"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    DockPanel.Dock="Left"
                    ItemsSource="{Binding InvertNames, ElementName=Ch_Parameters, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding DataContext.MaskSelectedInvert, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ElementName=Ch_Parameters}"
                    Style="{DynamicResource ComboBoxBase}" />
                <Controls:CustomSlider
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="25"
                    Margin="1"
                    Caption="Invert"
                    Tag="MaskInvert"
                    Value="{Binding Invert, Mode=TwoWay}" />
            </Grid>
            <Controls:CustomSlider
                Grid.Row="0"
                Grid.Column="1"
                Height="25"
                Margin="1"
                Caption="Keying"
                DockPanel.Dock="Bottom"
                Tag="Saturation"
                Value="{Binding Keying, Mode=TwoWay}" />
            <Controls:CustomSlider
                Height="25"
                Margin="1"
                Caption="Saturation"
                DockPanel.Dock="Bottom"
                Tag="MaskSaturation"
                Value="{Binding Saturation, Mode=TwoWay}" />
            <Controls:CustomSlider
                Height="25"
                Margin="1"
                Caption="Contrast"
                DockPanel.Dock="Bottom"
                Tag="MaskContrast"
                Value="{Binding Contrast, Mode=TwoWay}" />
            <Controls:CustomSlider
                Height="25"
                Margin="1"
                Caption="Brightness"
                DockPanel.Dock="Bottom"
                Tag="MaskBrightness"
                Value="{Binding Brightness, Mode=TwoWay}" />
            <Controls:FileSelector
                DockPanel.Dock="Top"
                Title="Textures"
                Margin="0, 4, 0, 2"
                ModeSelection="Extended"
                Items="{Binding TexturePaths}"/>
        </DockPanel>
    </Border>
</UserControl>
