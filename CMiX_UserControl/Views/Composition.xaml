<UserControl
    x:Class="CMiX.Composition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:ViewModels="clr-namespace:CMiX.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dd="urn:gong-wpf-dragdrop"
    
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:command="http://www.galasoft.ch/mvvmlight"
    CMiX:AttachedProperties.RegisterCommandBindings="{Binding CommandBindings}"
    Focusable="False"
    d:DesignHeight="880.666"
    d:DesignWidth="1358.5"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <command:EventToCommand 
                Command="{Binding WindowLoadedCommand}"
                PassEventArgsToCommand="True" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.InputBindings>
        <KeyBinding Modifiers="Control"
                Key="V"
                Command="{Binding PasteLayerCommand}" />
        <KeyBinding Modifiers="Control"
                Key="C"
                Command="{Binding CopyLayerCommand}" />
    </UserControl.InputBindings>
    <UserControl.DataContext>
        <ViewModels:Composition/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel
        x:Name="CMiX_UserControl"
        Background="#FF141414"
        LastChildFill="True">
        <Grid Margin="0,0,0,2" DockPanel.Dock="Top">
            <Label
                Style="{DynamicResource LabelBase}"
                HorizontalContentAlignment="Right"
                Background="{DynamicResource Color}"
                Foreground="{DynamicResource TextBase}" />
            <Menu
                Grid.Row="0"
                Height="25"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Style="{DynamicResource MenuBase}">
                <MenuItem
                    Height="{Binding ActualHeight, ElementName=MainMenu, Mode=OneWay}"
                    Padding="20,0,20,0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="center"
                    Header="File"
                    Style="{StaticResource MenuItemBase}">
                    <MenuItem
                    Header="New"
                    Template="{DynamicResource SubMenuItemBase}" />
                    <MenuItem
                    Header="Open"
                    Command="{Binding Path=OpenCompositionCommand}"
                    Template="{DynamicResource SubMenuItemBase}" />
                    <MenuItem
                    Header="Save"
                    Template="{DynamicResource SubMenuItemBase}" />
                    <MenuItem
                    Header="Save As"
                    Command="{Binding Path=SaveCompositionCommand}"
                    Template="{DynamicResource SubMenuItemBase}" />
                    <MenuItem
                    Header="Quit"
                    Template="{DynamicResource SubMenuItemBase}" />
                </MenuItem>
                <MenuItem
                    Height="{Binding ActualHeight, ElementName=MainMenu, Mode=OneWay}"
                    Padding="20,0,20,0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="center"
                    Header="Edit"
                    Style="{StaticResource MenuItemBase}">
                    <MenuItem
                        Header="Undo"
                        Template="{DynamicResource SubMenuItemBase}"
                        Command="ApplicationCommands.Undo"/>
                    <MenuItem
                        Header="Redo"
                        Template="{DynamicResource SubMenuItemBase}" 
                        Command="ApplicationCommands.Redo"/>
                </MenuItem>
            </Menu>
        </Grid>
        <Border
            Grid.Row="2"
            Height="25"
            Margin="0,2,0,0"
            Background="{StaticResource DarkerColor}"
            DockPanel.Dock="Bottom" />
        <DockPanel>
            <Border
                DockPanel.Dock="Right"
                Width="300"
                Margin="4, 4, 0, 4"
                Padding="8"
                CornerRadius="2"
                Background="{StaticResource HighDarkerColor}">
                <DockPanel>
                    <Border DockPanel.Dock="Top"               
                        BorderThickness="0, 0, 0, 2"
                        BorderBrush="{StaticResource DarkColor}">
                        <Label
                            Margin="0"
                            Style="{StaticResource LabelBase}"
                            Content="LAYERS"
                            DockPanel.Dock="Bottom"
                            FontWeight="SemiBold"
                            FontSize="12"/>
                    </Border>
                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                        <Button
                            Command="{Binding Path=AddLayerCommand}"
                            Width="25"
                            Height="25"
                            Content="+"
                            Style="{DynamicResource ButtonBase}" />
                        <Button
                            Command="{Binding Path=RemoveLayerCommand}"
                            Margin="2, 0, 0, 0"
                            Width="25"
                            Height="25"
                            Content="-"
                            Style="{DynamicResource ButtonBase}" />
                    </StackPanel>
                    <ListBox 
                        Margin="0, 8, 0, 0"
                        HorizontalContentAlignment="Stretch" 
                        Style="{DynamicResource LayerListBox}"
                        ItemContainerStyle="{StaticResource LayerListBoxItemStyle}"
                        ItemsSource="{Binding Layers}" 
                        SelectedItem="{Binding SelectedLayer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        dd:DragDrop.IsDragSource="True"
                        dd:DragDrop.IsDropTarget="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CMiX:ChannelLayer/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
            <Grid DockPanel.Dock="Bottom">
                <Border
                    BorderBrush="{StaticResource DarkerColor}"
                    CornerRadius="0, 2, 2, 0"
                    BorderThickness="0, 1, 1, 1"
                    Background="{StaticResource HighDarkerColor}"
                    Padding="8, 0, 8, 8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <CMiX:MasterBeatControl
                            Margin="0, 0, 4, 0"
                            Grid.Column="0"
                            DataContext="{Binding Path=MasterBeat}"/>
                        <TabControl Grid.Column="1" Style="{StaticResource TabControlBase}">
                            <TabItem Header="Camera"
                                Style="{StaticResource TabItemBase}">
                                <CMiX:Camera
                                    Margin="4, 0, 0, 0"
                                    DataContext="{Binding Camera}"/>
                            </TabItem>
                            <TabItem Header="OSC" Style="{StaticResource TabItemBase}">
                                <StackPanel>
                                    <Grid Height="20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="IP" 
                                                   Foreground="{DynamicResource TextBase}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        <TextBox
                                            Text="{Binding IP, Mode=TwoWay}"
                                            Grid.Column="1"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource DarkColor}"
                                            Background="{DynamicResource HighDarkerColor}"/>
                                    </Grid>
                                    <Grid Height="20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="PORT" 
                                            Foreground="{DynamicResource TextBase}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                        <TextBox
                                            Text="{Binding Port, Mode=TwoWay}"
                                            Grid.Column="1"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource DarkColor}"
                                            Background="{DynamicResource HighDarkerColor}"/>
                                    </Grid>
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                        <ListBox 
                            x:Name="UndoStackListBox"
                            Grid.Column="2"
                            Margin="10"
                            ItemsSource="{Binding UndoStack, Mode=OneWay}"
                            IsEnabled="True"
                            HorizontalAlignment="Stretch"
                        />
                    </Grid>
                </Border>
            </Grid>
            <Border
                Grid.Column="1"
                Margin="4">
                <ItemsControl ItemsSource="{Binding Layers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type Views:LayerControls}">
                            <Views:LayerControls Visibility="{Binding Enabled, Converter={StaticResource BoolToVisibility}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid></Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Border>
        </DockPanel>
    </DockPanel>
</UserControl>