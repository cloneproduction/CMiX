<UserControl
    x:Class="CMiX.Composition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dd="urn:gong-wpf-dragdrop"

    d:DesignHeight="1015.667"
    d:DesignWidth="1850.667"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel
        x:Name="CMiX_UserControl"
        Background="#FF141414"
        KeyDown="LayerButton_KeyDown"
        LastChildFill="True">
        <Grid Margin="0,0,0,2" DockPanel.Dock="Top">
            <Label
                x:Name="ProjectName"
                Style="{StaticResource LabelBase}"
                HorizontalContentAlignment="Right"
                Background="{DynamicResource Color}"
                Foreground="{DynamicResource TextBase}" />
            <Menu
                x:Name="MainMenu"
                Grid.Row="0"
                Height="25"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Focusable="False"
                Style="{DynamicResource MenuBase}">
                <MenuItem
                    x:Name="FileMenu"
                    Height="{Binding ActualHeight, ElementName=MainMenu, Mode=OneWay}"
                    Padding="20,0,20,0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="center"
                    Focusable="False"
                    Header="File"
                    Style="{StaticResource MenuItemBase}">
                    <MenuItem
                        Click="New_Click"
                        Header="New"
                        Template="{DynamicResource SubMenuItemBase}" />
                    <MenuItem
                        Click="Open_Click"
                        Header="Open"
                        Template="{DynamicResource SubMenuItemBase}" />
                    <MenuItem
                        Click="Save_Click"
                        Header="Save"
                        Template="{DynamicResource SubMenuItemBase}" />
                    <MenuItem
                        Click="SaveAs_Click"
                        Header="Save As"
                        Template="{DynamicResource SubMenuItemBase}" />
                    <MenuItem
                        Click="Quit_Click"
                        Header="Quit"
                        Template="{DynamicResource SubMenuItemBase}" />
                </MenuItem>
            </Menu>
        </Grid>
        <Border
            Grid.Row="2"
            Height="25"
            Margin="0,2,0,0"
            Background="{StaticResource DarkerColor}"
            DockPanel.Dock="Bottom" />
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition Width="0.6*" />
                <ColumnDefinition Width="0.2*" />
            </Grid.ColumnDefinitions>
            <Border
                BorderBrush="{StaticResource DarkerColor}"
                CornerRadius="0, 2, 2, 0"
                BorderThickness="0, 1, 1, 1"
                Background="{StaticResource HighDarkerColor}"
                Padding="8"
                Margin="0, 4, 4, 4">
                <DockPanel LastChildFill="False">
                    <CMiX:MasterBeatControl
                        x:Name="MasterBeatControl"
                        DataContext="{Binding Path=MasterBeat}"
                        DockPanel.Dock="Bottom"
                        Focusable="True" />
                    <CMiX:Camera
                        x:Name="CameraUserControl"
                        DataContext="{Binding Camera}"
                        DockPanel.Dock="Top" />
                </DockPanel>
            </Border>
            <Grid
                Grid.Column="1"
                Margin="4">
                <ItemsControl ItemsSource="{Binding Layers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type Views:LayerControls}">
                            <Views:LayerControls Visibility="{Binding Enabled, Converter={StaticResource BoolToVisibility}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid></Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
            <Border
                Grid.Column="2"
                Margin="4, 4, 0, 4"
                Padding="8, 8, 0, 8"
                CornerRadius="2"
                Background="{StaticResource HighDarkerColor}">
                <DockPanel>
                    <Border DockPanel.Dock="Top"               
                        BorderThickness="0, 0, 0, 2"
                        BorderBrush="{StaticResource DarkColor}">
                        <Label
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource LabelBase}"
                            Content="LAYERS"
                            Foreground="{StaticResource TextBase}" />
                    </Border>
                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                        <Button
                            Command="{Binding Path=AddLayerCommand}"
                            Width="25"
                            Height="25"
                            Content="+"
                            Style="{StaticResource ButtonBase}" />
                        <Button
                            Command="{Binding Path=RemoveLayerCommand}"
                            Margin="2, 0, 0, 0"
                            Width="25"
                            Height="25"
                            Content="-"
                            Style="{StaticResource ButtonBase}" />
                    </StackPanel>
                    <Grid>
                        <ListBox 
                            Style="{StaticResource ListBoxBase}"
                            HorizontalContentAlignment="Stretch" 
                            BorderThickness="0"
                            ItemsSource="{Binding Layers}" 
                            SelectionMode="Single"
                            Background="Transparent"
                            dd:DragDrop.IsDragSource="True"
                            dd:DragDrop.IsDropTarget="True">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CMiX:ChannelLayer/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>