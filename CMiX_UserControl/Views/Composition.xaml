<UserControl
    x:Class="CMiX.Composition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:ViewModels="clr-namespace:CMiX.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dd="urn:gong-wpf-dragdrop"
    d:DesignHeight="880.666"
    d:DesignWidth="1358.5"
    mc:Ignorable="d">

    <UserControl.InputBindings>
        <KeyBinding 
            Modifiers="Control"
            Key="V"
            Command="{Binding PasteLayerCommand}" 
            />
        <KeyBinding 
            Modifiers="Control"
            Key="C"
            Command="{Binding CopyLayerCommand}" 
            />
        <KeyBinding 
            Modifiers="Control"
            Key="Y" 
            Command="{Binding RedoCommand}" 
            />
        <KeyBinding 
            Modifiers="Control"
            Key="Z" 
            Command="{Binding UndoCommand}" 
            />
    </UserControl.InputBindings>
    
    <UserControl.DataContext>
        <ViewModels:Composition/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel
        x:Name="CMiX_UserControl"
        Background="#FF141414"
        LastChildFill="True">
        <Grid Margin="0,0,0,2" DockPanel.Dock="Top">
            <Label
                Style="{StaticResource LabelBase}"
                HorizontalContentAlignment="Right"
                Background="{StaticResource Color}"
                Foreground="{StaticResource TextBase}" 
                />
            <Menu
                Grid.Row="0"
                Height="25"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Style="{StaticResource MenuBase}">
                <MenuItem
                    Height="25"
                    Padding="20,0,20,0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="center"
                    Header="File"
                    Style="{StaticResource MenuItemBase}">
                    <MenuItem
                        Header="New"
                        Template="{StaticResource SubMenuItemBase}" 
                        />
                    <MenuItem
                        Header="Open"
                        Command="{Binding Path=OpenCompositionCommand}"
                        Template="{StaticResource SubMenuItemBase}" 
                        />
                    <MenuItem
                        Header="Save"
                        Template="{StaticResource SubMenuItemBase}" 
                        />
                    <MenuItem
                        Header="Save As"
                        Command="{Binding Path=SaveCompositionCommand}"
                        Template="{StaticResource SubMenuItemBase}" 
                        />
                    <MenuItem
                        Header="Quit"
                        Template="{StaticResource SubMenuItemBase}" 
                        />
                </MenuItem>
                <MenuItem
                    Height="25"
                    Padding="20,0,20,0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="center"
                    Header="Edit"
                    Style="{StaticResource MenuItemBase}">
                    <MenuItem
                        Header="Undo    Ctrl + Z"
                        Template="{StaticResource SubMenuItemBase}"
                        Command="{Binding UndoCommand}"
                        />
                    <MenuItem
                        Header="Redo    Ctrl + Y"
                        Template="{StaticResource SubMenuItemBase}" 
                        Command="{Binding RedoCommand}"
                        />
                </MenuItem>
            </Menu>
        </Grid>
        <Border
            Grid.Row="2"
            Height="25"
            Margin="0,2,0,0"
            Background="{StaticResource DarkerColor}"
            DockPanel.Dock="Bottom" 
            />
        <DockPanel>
            <Border
                DockPanel.Dock="Right"
                Width="300"
                Margin="4, 4, 0, 4"
                Padding="8"
                CornerRadius="2"
                Background="{StaticResource HighDarkerColor}">
                <DockPanel>
                    <Border DockPanel.Dock="Top"               
                        BorderThickness="0, 0, 0, 2"
                        BorderBrush="{StaticResource DarkColor}">
                        <Label
                            Margin="0"
                            Style="{StaticResource LabelBase}"
                            Content="LAYERS"
                            DockPanel.Dock="Bottom"
                            FontWeight="SemiBold"
                            FontSize="12"
                            />
                    </Border>
                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                        <Button
                            Command="{Binding Path=AddLayerCommand}"
                            Width="25"
                            Height="25"
                            Content="+"
                            Style="{StaticResource ButtonBase}" 
                            />
                        <Button
                            Command="{Binding Path=RemoveLayerCommand}"
                            Margin="2, 0, 0, 0"
                            Width="25"
                            Height="25"
                            Content="-"
                            Style="{StaticResource ButtonBase}" 
                            />
                    </StackPanel>
                    <ListBox 
                        Margin="0, 8, 0, 0"
                        HorizontalContentAlignment="Stretch" 
                        Style="{StaticResource LayerListBox}"
                        ItemContainerStyle="{StaticResource LayerListBoxItemStyle}"
                        ItemsSource="{Binding Layers}" 
                        SelectedItem="{Binding SelectedLayer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        dd:DragDrop.IsDragSource="True"
                        dd:DragDrop.IsDropTarget="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CMiX:ChannelLayer/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
            <Grid DockPanel.Dock="Bottom">
                <Border
                    BorderBrush="{StaticResource DarkerColor}"
                    CornerRadius="0, 2, 2, 0"
                    BorderThickness="0, 1, 1, 1"
                    Background="{StaticResource HighDarkerColor}"
                    Padding="8, 0, 8, 8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <CMiX:MasterBeatControl
                            Margin="0, 0, 4, 0"
                            Grid.Column="0"
                            DataContext="{Binding MasterBeat}"
                            />
                        <TabControl Grid.Column="1" Style="{StaticResource TabControlBase}">
                            <TabItem 
                                Header="Camera"
                                Style="{StaticResource TabItemBase}">
                                <CMiX:Camera
                                    Margin="4, 0, 0, 0"
                                    DataContext="{Binding Camera}"
                                    />
                            </TabItem>
                            <TabItem Header="OSC" Style="{StaticResource TabItemBase}">
                                <Views:OSCControl DataContext="{Binding OSCControl}"/>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Border>
            </Grid>
            <Border
                Grid.Column="1"
                Margin="4">
                <ItemsControl ItemsSource="{Binding Layers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type Views:LayerControls}">
                            <Views:LayerControls Visibility="{Binding Enabled, Converter={StaticResource BoolToVisibility}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Border>
        </DockPanel>
    </DockPanel>
</UserControl>