 <UserControl
    x:Class="CMiX.Views.Composition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:Resources="clr-namespace:CMiX.Resources"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:ViewModels="clr-namespace:CMiX.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dd="urn:gong-wpf-dragdrop"
    d:DesignHeight="880.666"
    d:DesignWidth="1358.5"
    mc:Ignorable="d">

    <UserControl.InputBindings>
        <KeyBinding 
            Modifiers="Control"
            Key="V"
            Command="{Binding PasteLayerCommand}" 
            />
        <KeyBinding 
            Modifiers="Control"
            Key="C"
            Command="{Binding CopyLayerCommand}" 
            />
        <KeyBinding 
            Modifiers="Control"
            Key="Y" 
            Command="{Binding RedoCommand}" 
            />
        <KeyBinding 
            Modifiers="Control"
            Key="Z" 
            Command="{Binding UndoCommand}" 
            />
    </UserControl.InputBindings>
    
    <UserControl.DataContext>
        <ViewModels:Composition/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <ResourceDictionary>
            <Resources:BindingProxy x:Key="proxy" Data="{Binding}" />
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        </ResourceDictionary>
        

    </UserControl.Resources>

    <DockPanel
        x:Name="CMiX_UserControl"
        Background="#FF141414"
        LastChildFill="True">
        <Grid Margin="0,0,0,2" DockPanel.Dock="Top">
            <Label
                Style="{StaticResource LabelBase}"
                HorizontalContentAlignment="Right"
                Background="{StaticResource Color}"
                Foreground="{StaticResource TextBase}" 
                />
            <Menu
                Grid.Row="0"
                Height="25"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Style="{StaticResource MenuBase}">
                <MenuItem
                    Height="25"
                    Padding="20,0,20,0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="center"
                    Header="File"
                    Style="{StaticResource MenuItemBase}">
                    <MenuItem
                        Header="New"
                        Template="{StaticResource SubMenuItemBase}" 
                        />
                    <MenuItem
                        Header="Open"
                        Command="{Binding Path=OpenCompositionCommand}"
                        Template="{StaticResource SubMenuItemBase}" 
                        />
                    <MenuItem
                        Header="Save"
                        Template="{StaticResource SubMenuItemBase}" 
                        />
                    <MenuItem
                        Header="Save As"
                        Command="{Binding Path=SaveCompositionCommand}"
                        Template="{StaticResource SubMenuItemBase}" 
                        />
                    <MenuItem
                        Header="Quit"
                        Template="{StaticResource SubMenuItemBase}" 
                        />
                </MenuItem>
                <MenuItem
                    Height="25"
                    Padding="20,0,20,0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="center"
                    Header="Edit"
                    Style="{StaticResource MenuItemBase}">
                    <MenuItem
                        Header="Undo    Ctrl + Z"
                        Template="{StaticResource SubMenuItemBase}"
                        Command="{Binding UndoCommand}"
                        />
                    <MenuItem
                        Header="Redo    Ctrl + Y"
                        Template="{StaticResource SubMenuItemBase}" 
                        Command="{Binding RedoCommand}"
                        />
                </MenuItem>
            </Menu>
        </Grid>
        <Border
            Grid.Row="2"
            Height="25"
            Margin="0,2,0,0"
            Background="{StaticResource DarkerColor}"
            DockPanel.Dock="Bottom" 
            />
        <DockPanel>
            <Border
                DockPanel.Dock="Right"
                Width="300"
                Margin="4, 4, 0, 4"
                Padding="8"
                CornerRadius="2"
                Background="{StaticResource HighDarkerColor}">
                <TabControl Style="{StaticResource TabControlBase}">
                    <TabItem Style="{StaticResource TabItemBase}">
                        <TabItem.Header>
                            <TextBlock Text="LAYERS" Margin="4, 0, 4, 0"/>
                        </TabItem.Header>
                        <DockPanel>
                            <Border DockPanel.Dock="Bottom"  Style="{StaticResource BorderContainer}">
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        ToolTip="New Layer"
                                        Command="{Binding Path=AddLayerCommand}"
                                        Width="15"
                                        Height="15"
                                        Style="{StaticResource ButtonImageBase}" >
                                        <Button.Content>
                                            <Image Source="/Assets/NewLayer.png"/>
                                        </Button.Content>
                                    </Button>
                                    <Button
                                        ToolTip="Delete Layer"
                                        Command="{Binding Path=RemoveLayerCommand}"
                                        Margin="2, 0, 0, 0"
                                        Width="15"
                                        Height="15"
                                        Style="{StaticResource ButtonImageBase}">
                                        <Button.Content>
                                            <Image Source="/Assets/DeleteLayer.png"/>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </Border>
                            
                            <ListBox 
                                Margin="0, 8, 0, 0"
                                HorizontalContentAlignment="Stretch" 
                                ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                Style="{StaticResource LayerListBox}"
                                ItemContainerStyle="{StaticResource LayerListBoxItemStyle}"
                                ItemsSource="{Binding Layers}" 
                                SelectedItem="{Binding SelectedLayer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                dd:DragDrop.IsDragSource="True"
                                dd:DragDrop.IsDropTarget="True">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <CMiX:ChannelLayer>
                                            <CMiX:ChannelLayer.ContextMenu>
                                                <ContextMenu Style="{StaticResource ContextMenuBase }">
                                                    <MenuItem
                                                        Padding="8, 4"
                                                        Style="{StaticResource MenuItemBase}"
                                                        Foreground="{StaticResource TextBase}"
                                                        Command="{Binding Data.DeleteLayerCommand, Source={StaticResource proxy}}"
                                                        CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=DataContext}">
                                                        <MenuItem.Header>
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Width="10" Height="10" Source="/CMiX_UserControl;component/Assets/DeleteLayer.png" />
                                                                <Separator Margin="8, 0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                                                <TextBlock Text="Delete Layer"/>
                                                            </StackPanel>
                                                        </MenuItem.Header>
                                                    </MenuItem>
                                                    <MenuItem
                                                        Padding="8, 4"
                                                        Style="{StaticResource MenuItemBase}"
                                                        Foreground="{StaticResource TextBase}"
                                                        Command="{Binding Data.DuplicateLayerCommand, Source={StaticResource proxy}}"
                                                        CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=DataContext}">
                                                        <MenuItem.Header>
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Width="10" Height="10" Source="/CMiX_UserControl;component/Assets/Copy.png" />
                                                                <Separator Margin="8, 0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                                                <TextBlock Text="Duplicate Layer"/>
                                                            </StackPanel>
                                                        </MenuItem.Header>
                                                    </MenuItem>
                                                </ContextMenu>
                                            </CMiX:ChannelLayer.ContextMenu>
                                        </CMiX:ChannelLayer>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                    </TabItem>
                    <TabItem Style="{StaticResource TabItemBase}">
                        <TabItem.Header>
                            <TextBlock Text="OSC" Margin="4, 0, 4, 0"/>
                        </TabItem.Header>
                        <Views:OSCControl 
                            VerticalAlignment="Top"
                            Margin="0, 8, 0, 0"
                            DataContext="{Binding OSCControl}"/>
                    </TabItem>

                </TabControl>

            </Border>
            <Grid DockPanel.Dock="Bottom">
                <Border
                    BorderBrush="{StaticResource DarkerColor}"
                    CornerRadius="0, 2, 2, 0"
                    BorderThickness="0, 1, 1, 1"
                    Background="{StaticResource HighDarkerColor}"
                    Padding="8, 0, 8, 8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <CMiX:MasterBeatControl
                            Margin="0, 0, 4, 0"
                            Grid.Column="0"
                            DataContext="{Binding MasterBeat}"
                            />
                        <TabControl Grid.Column="1" Style="{StaticResource TabControlBase}">
                            <TabItem 
                                Header="Camera"
                                Style="{StaticResource TabItemBase}">
                                <CMiX:Camera
                                    Margin="4, 0, 0, 0"
                                    DataContext="{Binding Camera}"
                                    />
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Border>
            </Grid>
            <Border
                Grid.Column="1"
                Margin="4">
                <Grid>
                    <ItemsControl ItemsSource="{Binding Layers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type Views:LayerControls}">
                                <Views:LayerControls Visibility="{Binding Enabled, Converter={StaticResource BoolToVisibility}}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>
            </Border>
        </DockPanel>
    </DockPanel>
</UserControl>