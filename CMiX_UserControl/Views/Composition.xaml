<UserControl
    x:Class="CMiX.Composition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="cmix"
    d:DesignHeight="1015.667"
    d:DesignWidth="1850.667"
    mc:Ignorable="d">
    <DockPanel
        x:Name="CMiX_UserControl"
        Background="#FF141414"
        KeyDown="LayerButton_KeyDown"
        LastChildFill="True">
        <Grid Margin="0,0,0,2" DockPanel.Dock="Top">
            <Label
                x:Name="ProjectName"
                Style="{StaticResource LabelBase}"
                HorizontalContentAlignment="Right"
                Background="{DynamicResource Color}"
                Content="{Binding DataContext.CompoName[0], ElementName=cmix, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                Foreground="{DynamicResource TextBase}" />
            <Menu
                x:Name="MainMenu"
                Grid.Row="0"
                Height="25"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Focusable="False"
                Style="{DynamicResource MenuBase}">
                <MenuItem
                    x:Name="FileMenu"
                    Height="{Binding ActualHeight, ElementName=MainMenu, Mode=OneWay}"
                    Padding="20,0,20,0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="center"
                    Focusable="False"
                    Header="File"
                    Style="{StaticResource MenuItemBase}">
                    <MenuItem
                        Click="New_Click"
                        Header="New"
                        Template="{DynamicResource SubMenuItemBase}" />
                    <MenuItem
                        Click="Open_Click"
                        Header="Open"
                        Template="{DynamicResource SubMenuItemBase}" />
                    <MenuItem
                        Click="Save_Click"
                        Header="Save"
                        Template="{DynamicResource SubMenuItemBase}" />
                    <MenuItem
                        Click="SaveAs_Click"
                        Header="Save As"
                        Template="{DynamicResource SubMenuItemBase}" />
                    <MenuItem
                        Click="Quit_Click"
                        Header="Quit"
                        Template="{DynamicResource SubMenuItemBase}" />
                </MenuItem>
            </Menu>
        </Grid>
        <Border
            Grid.Row="2"
            Height="25"
            Margin="0,2,0,0"
            Background="{StaticResource DarkerColor}"
            DockPanel.Dock="Bottom" />
        <Grid Grid.Row="1" KeyboardNavigation.TabNavigation="Cycle">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition Width="0.6*" />
                <ColumnDefinition Width="0.2*" />
            </Grid.ColumnDefinitions>
            <Border
                BorderBrush="{StaticResource DarkerColor}"
                CornerRadius="0, 2, 2, 0"
                BorderThickness="0, 1, 1, 1"
                Background="{StaticResource HighDarkerColor}"
                Padding="8"
                Margin="0, 4, 4, 4">
                <DockPanel LastChildFill="False">
                    <CMiX:MasterBeatControl
                        x:Name="MasterBeatControl"
                        DataContext="{Binding Path=MasterBeat}"
                        DockPanel.Dock="Bottom"
                        Focusable="True" />
                    <CMiX:Camera
                        x:Name="CameraUserControl"
                        DataContext="{Binding Camera}"
                        DockPanel.Dock="Top" />
                </DockPanel>
            </Border>
            <Grid
                x:Name="ContentControl"
                Grid.Column="1"
                Margin="4">
                <Views:LayerControls
                    x:Name="Layer0"
                    DataContext="{Binding CurrentLayer}"
                    Loaded="Layer0_Loaded"
                    Tag="0" />
            </Grid>
            <Border
                Grid.Column="4"
                Margin="4, 4, 0, 4"
                Background="{StaticResource DarkerColor}">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                        <Button
                            x:Name="AddLayer"
                            Width="25"
                            Height="25"
                            Content="+"
                            DockPanel.Dock="left"
                            Style="{StaticResource ButtonBase}" />
                        <Button
                            x:Name="RemoveLayer"
                            Width="25"
                            Height="25"
                            Content="-"
                            DockPanel.Dock="left"
                            Style="{StaticResource ButtonBase}" />
                    </StackPanel>
                    <ScrollViewer
                        Margin="2"
                        DockPanel.Dock="Bottom"
                        VerticalScrollBarVisibility="Auto">
                        <StackPanel
                                x:Name="LayerControlStack"
                                Grid.Column="1"
                                AllowDrop="True">
                            <CMiX:ChannelLayer x:Name="LayerControl0" DataContext="{Binding CurrentLayer}"/>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
