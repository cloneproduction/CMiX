 <UserControl
    x:Class="CMiX.Views.Composition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:Behavior="clr-namespace:CMiX.Behaviors"
    xmlns:Resources="clr-namespace:CMiX.MVVM.Resources;assembly=CMiX.MVVM"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:MVVM.Views="clr-namespace:CMiX.MVVM.Views;assembly=CMiX.MVVM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    d:DesignHeight="880.666"
    d:DesignWidth="1358.5"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <Resources:BindingProxy x:Key="proxy" Data="{Binding}" />
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
            <Resources:AlwaysVisibleConverter x:Key="AlwaysVisibleConverter"/>
            <Resources:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
     
    <UserControl.InputBindings>
        <KeyBinding 
            Modifiers="Control"
            Key="V"
            Command="{Binding PasteLayerCommand}" 
            />
        <KeyBinding 
            Modifiers="Control"
            Key="C"
            Command="{Binding CopyLayerCommand}" 
            />
    </UserControl.InputBindings>

    <DockPanel
        x:Name="CMiX_UserControl"
        Background="{StaticResource SuperHighDarkerColor}"
        LastChildFill="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3.0*"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DockPanel>
                <CMiX:MasterBeatControl
                    DockPanel.Dock="Bottom"
                    DataContext="{Binding MasterBeat}"/>
                <Views:ObjectEditor DataContext="{Binding ObjectEditor}"/>
                <!--<Views:EntityEditor DataContext="{Binding EntityEditor}"/>-->
                <!--<Views:LayerEditor 
                    DockPanel.Dock="Top"
                    DataContext="{Binding LayerEditor}" />-->
            </DockPanel>

            <Border
                Grid.Column="2"
                Padding="0"
                Background="{StaticResource HighDarkerColor}">
                <DockPanel>

                    <Border Height="40" VerticalAlignment="Center" DockPanel.Dock="Top">
                        <TextBlock 
                            Padding="8"
                            VerticalAlignment="Center"
                            Text="{Binding Name}" 
                            Foreground="{StaticResource ActiveTextBase}"/>
                    </Border>

                    <Separator  DockPanel.Dock="Top" Background="{StaticResource SuperHighDarkerColor}" Height="4" HorizontalAlignment="Stretch"/>
                    <TabControl>
                        <TabItem>
                            <TabItem.Header>
                                <TextBlock 
                                    Text="LAYERS" 
                                    Margin="8"
                                    />
                            </TabItem.Header>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    
                                </Grid.RowDefinitions>
                                <Views:LayerPanel Margin="0, 8" DataContext="{Binding}"/>
                                <GridSplitter Grid.Row="1" Background="{StaticResource DarkColor}" Style="{StaticResource GridSplitter}" Height="2" Margin="4, 0" HorizontalAlignment="Stretch" />
                                <Views:EntityPanel Grid.Row="2" DataContext="{Binding SelectedLayer.Entities}"/>
                            </Grid>
                           
                        </TabItem>
                        <TabItem>
                            <TabItem.Header>
                                <TextBlock 
                                Text="CAMERA" 
                                Margin="8"
                                />
                            </TabItem.Header>
                            <CMiX:Camera
                            Margin="0, 8, 0, 0"
                            DataContext="{Binding Camera}"
                            />
                        </TabItem>
                        <TabItem>
                            <TabItem.Header>
                                <TextBlock 
                                Text="MESSENGER" 
                                Margin="8"
                                />
                            </TabItem.Header>
                            <DockPanel>
                                <!--<StackPanel DockPanel.Dock="Top">
                                    <DockPanel Margin="4">
                                        <TextBlock Text="Content Folder" VerticalAlignment="Center" />
                                        <Button Height="25" Content="..." Width="25" HorizontalAlignment="Right" Margin="2">
                                            <i:Interaction.Behaviors>
                                                <Behavior:FolderDialogBehavior SetterName="ContentFolderName"/>
                                            </i:Interaction.Behaviors>
                                        </Button>
                                    </DockPanel>
                                    <TextBox 
                                        Height="20" 
                                        Margin="4" 
                                        Foreground="{StaticResource TextBase}" 
                                        Background="{StaticResource HighDarkerColor}" 
                                        Text="{Binding ContentFolderName}"
                                        />
                                </StackPanel>-->
                                <DockPanel Grid.Row="2" DockPanel.Dock="Bottom">
                                    
                                    <!--<Separator Margin="0, 8" DockPanel.Dock="Top" Background="{StaticResource DarkColor}" HorizontalAlignment="Stretch"/>-->
                                    <!--<Border 
                                        DockPanel.Dock="Top"
                                        Margin="0, 0, 0 4"
                                        Height="25">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Margin="4, 0, 0, 0"
                                            Text="Assets"
                                            Foreground="{StaticResource TextBase}"/>
                                    </Border>-->
                                    <MVVM.Views:Slider
                                        DockPanel.Dock="Top"
                                        Margin="0, 8, 0, 0"
                                        Grid.Column="1"
                                        Height="20"
                                        Caption="Transition"
                                        DataContext="{Binding Transition}"
                                        />
                                    <Views:MessageService DataContext="{Binding MessageValidationManager}"/>
                                </DockPanel>
                            </DockPanel>
                        </TabItem>
                    </TabControl>
                </DockPanel>
            </Border>
            <GridSplitter Grid.Column="1" Style="{StaticResource GridSplitter}" Width="3" Margin="4, 0" HorizontalAlignment="Stretch" />
        </Grid>
    </DockPanel>
</UserControl>