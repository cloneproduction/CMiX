<UserControl x:Class="CMiX.Views.Layer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Views="clr-namespace:CMiX.Views"
             mc:Ignorable="d" 
             d:DesignHeight="513" d:DesignWidth="389">
    <TabControl>
        <TabItem Width="100" Height="30" Header="Content">
            <Views:Content                 
                    Grid.Column="0" 
                    Margin="4, 0, 4, 0"
                    DataContext="{Binding SelectedLayer.Content}"/>
        </TabItem>
        <TabItem Width="100" Height="30" Header="Mask">
            <Views:Mask                 
                    Grid.Column="1"
                    Margin="4, 0, 4, 0" 
                    DataContext="{Binding SelectedLayer.Mask}"/>
        </TabItem>
        <TabItem Width="100" Height="30" Header="PostFX">
            <Views:PostFX                 
                    Grid.Column="1"
                    Margin="4, 0, 4, 0" 
                    DataContext="{Binding SelectedLayer.PostFX}"/>
        </TabItem>
    </TabControl>
</UserControl>
