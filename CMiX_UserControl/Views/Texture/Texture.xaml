<UserControl
    x:Class="CMiX.Studio.Views.Texture"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:CMiX.Studio.Views"
    xmlns:MVVM.ViewModels="clr-namespace:CMiX.MVVM.ViewModels;assembly=CMiX.MVVM"
    xmlns:Controls="clr-namespace:CMiX.MVVM.Controls;assembly=CMiX.MVVM"
    xmlns:MVVM.Views="clr-namespace:CMiX.MVVM.Views;assembly=CMiX.MVVM"
    xmlns:Resources="clr-namespace:CMiX.MVVM.Resources;assembly=CMiX.MVVM"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModels="clr-namespace:CMiX.Studio.ViewModels"
    d:DesignHeight="636.667"
    d:DesignWidth="316.667"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Resources:BindingProxy x:Key="ProjectProxy" Data="{Binding}" />
        <ObjectDataProvider x:Key="InvertMode" MethodName="GetNames" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="MVVM.ViewModels:TextureInvertMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Border Background="{StaticResource HighDarkerColor}"
            CornerRadius="4" Padding="8">
        <StackPanel>
            <Border
                Height="25"
                Margin="0, 0, 0, 2"
                Padding="4"
                DockPanel.Dock="Top">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem
                            Padding="8, 4"
                            Foreground="{StaticResource TextBase}"
                            Command="{Binding Data.CopyTextureCommand, Source={StaticResource ProjectProxy}}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="10" Height="10" Source="{StaticResource Copy}" />
                                    <Separator Margin="8, 0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                    <TextBlock Text="Copy Texture"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem
                            Padding="8, 4"
                            Foreground="{StaticResource TextBase}"
                            Command="{Binding Data.PasteTextureCommand, Source={StaticResource ProjectProxy}}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="10" Height="10" Source="{StaticResource Paste}" />
                                    <Separator Margin="8, 0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                    <TextBlock Text="Paste Texture"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem
                            Padding="8, 4"
                            Foreground="{StaticResource TextBase}"
                            Command="{Binding Data.ResetTextureCommand, Source={StaticResource ProjectProxy}}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="10" Height="10" Source="{StaticResource Reset}" />
                                    <Separator Margin="8, 0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                    <TextBlock Text="Reset Texture"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                    </ContextMenu>
                </Border.ContextMenu>
                <DockPanel 
                    VerticalAlignment="Center" 
                    LastChildFill="False">
                    <TextBlock
                        Margin="4, 0, 0, 0"
                        Text="TEXTURE"
                        Foreground="{StaticResource TextBase}"/>
                </DockPanel>
            </Border>

            <Views:TexturePathSelector DataContext="{Binding AssetPathSelector}"/>
            <Expander IsExpanded="True" Margin="0, 2" Header="Transform" Style="{StaticResource ExpanderBase}">
                <StackPanel>
                    <Border Margin="0, 4" Style="{StaticResource BorderContainer}">
                        <StackPanel>
                            <MVVM.Views:SliderCentered
                                        Caption="Pan"
                                        DockPanel.Dock="Bottom"
                                        DataContext="{Binding Pan}"/>
                            <MVVM.Views:SliderCentered
                                        Margin="0, 2, 0, 2"
                                        Caption="Tilt"
                                        DockPanel.Dock="Bottom"
                                        DataContext="{Binding Tilt}"/>
                            <MVVM.Views:SliderCentered
                                        Caption="Scale"
                                        DockPanel.Dock="Bottom"
                                        DataContext="{Binding Scale}"/>
                            <MVVM.Views:SliderCentered
                                        Margin="0, 2, 0, 0"
                                        Caption="Rotate"
                                        DockPanel.Dock="Bottom"
                                        DataContext="{Binding Rotate}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource BorderContainer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.3*"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="U" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <ComboBox Margin="0, 0, 2, 0" Grid.Column="1"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.3*"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock 
                                    Text="V" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                                <ComboBox 
                                    Grid.Column="1" 
                                    Margin="2, 0, 0, 0"/>
                            </Grid>
                        </Grid>
                    </Border>
                </StackPanel>
            </Expander>
            <Expander IsExpanded="True" Margin="0, 2" Header="Color" Style="{StaticResource ExpanderBase}">
                <StackPanel>
                    <MVVM.Views:SliderCentered
                        Margin="0, 8, 0, 1"
                        Caption="Brightness"
                        DockPanel.Dock="Bottom"
                        DataContext="{Binding Brightness}"/>
                    <MVVM.Views:SliderCentered
                        Margin="0, 1, 0, 8"
                        Caption="Contrast"
                        DockPanel.Dock="Bottom"
                        DataContext="{Binding Contrast}"/>
                    <MVVM.Views:Slider
                        Margin="0, 1"
                        Grid.Column="0"
                        Caption="Invert"
                        DataContext="{Binding Invert}"/>
                    <Grid Margin="0, 1, 0, 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ComboBox
                            Grid.Column="1"
                            ItemsSource="{Binding Source={StaticResource InvertMode}}"
                            SelectedItem="{Binding InvertMode}"
                            SelectedIndex="0"/>
                        <TextBlock 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Right" 
                            Padding="8, 0" 
                            Foreground="{StaticResource TextBase}" 
                            Text="Invert Mode" Grid.Column="0"/>
                    </Grid>
                    <MVVM.Views:SliderCentered
                        Margin="0, 1"
                        Caption="Hue"
                        DockPanel.Dock="Bottom"
                        DataContext="{Binding Hue}"/>
                    <MVVM.Views:SliderCentered
                        Margin="0, 1"
                        Caption="Saturation"
                        DockPanel.Dock="Bottom"
                        DataContext="{Binding Saturation}"/>
                    <MVVM.Views:SliderCentered
                        Margin="0, 1, 0, 8"
                        Caption="Luminosity"
                        DockPanel.Dock="Bottom"
                        DataContext="{Binding Luminosity}"/>
                    <MVVM.Views:Slider
                        Margin="0, 1, 0, 8"
                        Caption="Keying"
                        DockPanel.Dock="Bottom"
                        DataContext="{Binding Keying}"/>
                </StackPanel>
            </Expander>
        </StackPanel>
    </Border>
</UserControl>