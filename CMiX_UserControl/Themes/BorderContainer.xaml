<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CMiX.Themes">

    <Style x:Key="BorderContainer" TargetType="{x:Type Border}">

        
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Background" Value="{DynamicResource DarkerColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource DarkerColor}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource LightColor}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>