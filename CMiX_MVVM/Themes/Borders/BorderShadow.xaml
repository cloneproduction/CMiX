<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BorderShadow" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource DarkerColor}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusDefault}"/>
        <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource HighDarkerColor}"/>
    </Style>
    
</ResourceDictionary>