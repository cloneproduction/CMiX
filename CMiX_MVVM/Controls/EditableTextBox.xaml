<UserControl x:Class="CMiX.MVVM.Controls.EditableTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CMiX.MVVM.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <TextBlock 
            x:Name="TextDisplay" 
            VerticalAlignment="Center"
            Background="Transparent" 
            Foreground="{StaticResource TextBase}"
            Text="{Binding Path=Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:EditableTextBox}}}" />
        <TextBox
            x:Name="TextInput" 
            Padding="2"
            SelectionBrush="Transparent"
            CaretBrush="{StaticResource SuperHighLightColor}"
            BorderThickness="0"
            VerticalAlignment="Center"
            Background="{StaticResource DarkerColor}" 
            Foreground="{StaticResource ActiveTextBase}" 
            Text="{Binding Path=Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:EditableTextBox}}}" />
    </Grid>
</UserControl>
