<UserControl x:Class="CMiXPlayer.Views.PlaylistEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CMiXPlayer.Views"
             xmlns:MVVM.Views="clr-namespace:CMiX.MVVM.Views;assembly=CMiX_MVVM"
             xmlns:Views="clr-namespace:CMiXPlayer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border 
            Margin="4"  
            Grid.Column="0" 
            Style="{StaticResource BorderContainer}">
            <ListView 
                SelectedItem="{Binding SelectedPlaylist}"
                ItemsSource="{Binding Playlists}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <Border 
            Margin="4"  
            Grid.Column="1" 
            Style="{StaticResource BorderContainer}">
            <DockPanel>



                <Button 
                    Margin="4"
                    Content="Create"
                    Height="25" 
                    DockPanel.Dock="Bottom"
                    Command="{Binding CreatePlaylistCommand}"
                    />
                <Button 
                    Margin="4"
                    Content="Edit Selected"
                    Height="25" 
                    DockPanel.Dock="Bottom"
                    Command="{Binding EditPlaylistCommand}"
                    />
                <Button 
                    Margin="4"
                    Content="Save"
                    Height="25" 
                    DockPanel.Dock="Bottom"
                    Command="{Binding SavePlaylistCommand}"
                    />
                <Button 
                    Margin="4"
                    Content="New"
                    Height="25" 
                    DockPanel.Dock="Bottom"
                    Command="{Binding NewPlaylistCommand}"
                    />
                <Views:PlaylistEditable DataContext="{Binding EditablePlaylist}"/>
            </DockPanel>
        </Border>


    </Grid>
</UserControl>
