<UserControl x:Class="CMiXPlayer.Views.PlaylistEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CMiXPlayer.Views"
             xmlns:MVVM.Views="clr-namespace:CMiX.MVVM.Views;assembly=CMiX_MVVM"
             xmlns:Views="clr-namespace:CMiXPlayer.Views"
             xmlns:dd="urn:gong-wpf-dragdrop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border 
            Margin="4"  
            Grid.Column="0" 
            Style="{StaticResource BorderContainer}">
            <DockPanel>
                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button 
                        Grid.Column="0"
                        Margin="4"
                        Content="New"
                        Height="25" 
                        Command="{Binding NewPlaylistCommand}"
                        />
                    <Button 
                        Grid.Column="1"
                        Margin="4"
                        Content="Delete"
                        Height="25" 
                        Command="{Binding DeletePlaylistCommand}"
                        />
                </Grid>

                <ListView 
                    Background="{StaticResource HighDarkerColor}"
                    Foreground="{StaticResource TextBase}"
                    SelectedItem="{Binding SelectedPlaylist}"
                    ItemsSource="{Binding Playlists}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </Border>
        <Border 
            Margin="4"  
            Grid.Column="1" 
            Style="{StaticResource BorderContainer}">
            <Border Style="{StaticResource BorderContainer}">
                <DockPanel>
                    <Grid 
                        Height="25"
                        DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label
                            HorizontalAlignment="Right"
                            Grid.Column="0"
                            Content="Playlist Name" 
                            />
                        <TextBox 
                            Foreground="{StaticResource TextBase}"
                            Grid.Column="1"
                            Margin="4"
                            Background="{StaticResource HighDarkerColor}"
                            BorderThickness="0"
                            Text="{Binding SelectedPlaylist.Name, UpdateSourceTrigger=PropertyChanged}"
                            />
                    </Grid>
                    <ListBox 
                        AllowDrop="True"
                        dd:DragDrop.IsDragSource="True"
                        dd:DragDrop.IsDropTarget="True"
                        dd:DragDrop.DragHandler="{Binding SelectedPlaylist}"
                        dd:DragDrop.DropHandler="{Binding SelectedPlaylist}"
                        ItemsSource="{Binding SelectedPlaylist.Compositions}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
