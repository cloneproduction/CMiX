<UserControl x:Class="CMiXPlayer.Views.UnitType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Views="clr-namespace:CMiXPlayer.Views"
             xmlns:MVVM.Views="clr-namespace:CMiX.MVVM.Views;assembly=CMiX_MVVM"
             mc:Ignorable="d" 
             d:DesignHeight="91.736" d:DesignWidth="455.394">
    <StackPanel>
        <Grid Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Padding="8, 0, 0, 0"
                Foreground="{StaticResource TextBase}"
                Text="Unit Type"
                VerticalAlignment="Center"
                />
            <ComboBox
                Grid.Column="1"
                Margin="4"
                ItemsSource="{Binding UnitTypes}"
                SelectedItem="{Binding SelectedUnitType}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock 
                            Text="{Binding Name}"
                            />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
        <Grid Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Padding="8, 0, 0, 0"
                Foreground="{StaticResource TextBase}"
                Text="Interval"
                VerticalAlignment="Center"
                />
            <DockPanel Grid.Column="1">
                <Grid Margin="4">
                    <Border 
                        CornerRadius="4"
                        x:Name="CounterBorder" 
                        Background="{StaticResource DarkColor}">
                        <TextBox
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            BorderThickness="0"
                            Background="{StaticResource DarkerColor}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Text="{Binding DataContext.SelectedToRunType.Interval, RelativeSource={RelativeSource AncestorType=Views:ToRunType}}"
                            Foreground="{StaticResource TextBase}"
                            />
                    </Border>
                    <Button
                        x:Name="Add"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Width="20"
                        Content="+"
                        DockPanel.Dock="Right"
                        Command="{Binding DataContext.SelectedToRunType.AddCommand, RelativeSource={RelativeSource AncestorType=Views:ToRunType}}"
                        >
                    </Button>
                    <Button
                        x:Name="Sub"
                        HorizontalAlignment="Left"
                        Grid.Column="0"
                        Width="20"
                        Content="-"
                        DockPanel.Dock="Right"
                        Command="{Binding DataContext.SelectedToRunType.SubCommand, RelativeSource={RelativeSource AncestorType=Views:ToRunType}}"
                        >
                    </Button>
                </Grid>
            </DockPanel>
        </Grid>
    </StackPanel>
</UserControl>