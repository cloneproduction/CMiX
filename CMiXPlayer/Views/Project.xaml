<UserControl x:Class="CMiXPlayer.Views.Project"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Views="clr-namespace:CMiXPlayer.Views"
             xmlns:MVVM.Views="clr-namespace:CMiX.MVVM.Views;assembly=CMiX_MVVM"
             mc:Ignorable="d" 
             d:DesignHeight="522.751" d:DesignWidth="553.585">

    <TabControl Margin="0, 8, 0, 0">
        <TabItem Header="Compo">
            <DockPanel>
                <DockPanel Height="25" DockPanel.Dock="Top" Margin="4">
                    <Button Command="{Binding AddClientCommand}" Content="Add Client"/>
                </DockPanel>
                <ListView
                    BorderThickness="0"
                    HorizontalContentAlignment="Stretch"
                    Background="{StaticResource DarkColor}"
                    ItemsSource="{Binding Clients}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Views:Client Margin="4"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </TabItem>
        <TabItem Header="Settings">

        </TabItem>
    </TabControl>
</UserControl>
